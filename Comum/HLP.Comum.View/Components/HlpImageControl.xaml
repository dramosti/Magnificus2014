<UserControl x:Class="HLP.Comum.View.Components.HlpImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:conv="clr-namespace:HLP.Comum.View.Converters"
             mc:Ignorable="d"
             x:Name="ucImg"
             d:DesignHeight="330" d:DesignWidth="300">
    <UserControl.Resources>
        <conv:ImageToaByteConverter x:Key="imgConverter"></conv:ImageToaByteConverter>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Bottom" Content="Clique para selecionar uma imagem" Click="Button_Click_1"></Button>
        <Image 
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Source="{Binding ElementName=ucImg, Path=byteImg, Converter={StaticResource imgConverter}}"></Image>
    </DockPanel>    
</UserControl>
