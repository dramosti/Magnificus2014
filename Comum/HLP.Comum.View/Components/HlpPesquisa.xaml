<runtime:BaseControl x:Class="HLP.Comum.View.Components.HlpPesquisa"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:runtime="clr-namespace:HLP.Comum.View.Components"
             mc:Ignorable="d" 
            Width="Auto" Height="Auto">
    <DockPanel LastChildFill="True">
        <Label x:Name="lblCaption" Content="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}, Path=Caption}" FontFamily="Courier New"
               Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type UserControl}},Path=WidthLabel}"/>
        <TextBox x:Name="txtID" Width="80" Text="{Binding iValorPesquisa}" />
        <TextBox x:Name="txtDisplay" Text="{Binding pesquisaRapida.Display}"  />
    </DockPanel>
</runtime:BaseControl>
