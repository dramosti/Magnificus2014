    <Style x:Key="PasswordBoxSupervisor"
    	TargetType="{x:Type PasswordBox}">
        <Setter Property="Util:PasswordBoxMonitor.IsMonitoring"
              Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type PasswordBox}">
                    <Border Name="Bd"                    
                    Background="{TemplateBinding Background}"
                    BorderThickness="1.3"
                    BorderBrush="{DynamicResource CinzaClaro}" 
                    SnapsToDevicePixels="true">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost"
                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <TextBlock Text="Senha" VerticalAlignment="Center"                        
                           Foreground="{DynamicResource CinzaClaro}"                          
                           FontFamily="Segoe UI Light"                                
                           Visibility="Collapsed"
                           Name="txtPrompt" Margin="4,0,0,3"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" TargetName="Bd" Value="{DynamicResource CinzaEscuro}"/>
                        </Trigger>
                        <Trigger Property="Util:PasswordBoxMonitor.PasswordLength" Value="0">
                            <Setter Property="Visibility" TargetName="txtPrompt" Value="Visible"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

