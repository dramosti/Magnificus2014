<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:Components="clr-namespace:HLP.Comum.View.Components;assembly=HLP.Comum.View" x:Class="HLP.Magnificus.View.WPF.MainWindow"
        Title="Magnificus 2014" 
        mc:Ignorable="d" WindowState="Maximized" Width="1029" Closed="Window_Closed"
        >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HLP.Comum.Resources;component/Styles/mainStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Storyboard x:Key="OnUnChecked" FillBehavior="HoldEnd">
                <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="containerCadastros" Storyboard.TargetProperty="(FrameworkElement.Width)">
                    <SplineDoubleKeyFrame KeyTime="00:00:00" Value="30"/>
                </DoubleAnimationUsingKeyFrames>
                <BooleanAnimationUsingKeyFrames FillBehavior="Stop" BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="expanderContainerCadastros" Storyboard.TargetProperty="(Expander.IsExpanded)">
                    <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="False"/>
                </BooleanAnimationUsingKeyFrames>
                <BooleanAnimationUsingKeyFrames FillBehavior="Stop" BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="expanderContainerFavoritos" Storyboard.TargetProperty="(Expander.IsExpanded)">
                    <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="False"/>
                </BooleanAnimationUsingKeyFrames>
                <ObjectAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="txtMenu" Storyboard.TargetProperty="(UIElement.Visibility)">
                    <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Collapsed}"/>
                </ObjectAnimationUsingKeyFrames>
            </Storyboard>

            <Storyboard x:Key="OnChecked" FillBehavior="HoldEnd"  >
                <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="containerCadastros" Storyboard.TargetProperty="(FrameworkElement.Width)">
                    <SplineDoubleKeyFrame KeyTime="00:00:00" Value="200"/>
                </DoubleAnimationUsingKeyFrames>
                <BooleanAnimationUsingKeyFrames FillBehavior="Stop" BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="expanderContainerCadastros" Storyboard.TargetProperty="(Expander.IsExpanded)">
                    <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="False"/>
                </BooleanAnimationUsingKeyFrames>
                <BooleanAnimationUsingKeyFrames FillBehavior="Stop" BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="expanderContainerFavoritos" Storyboard.TargetProperty="(Expander.IsExpanded)">
                    <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="False"/>
                </BooleanAnimationUsingKeyFrames>
                <ObjectAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="txtMenu" Storyboard.TargetProperty="(UIElement.Visibility)">
                    <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="{x:Static Visibility.Visible}"/>
                </ObjectAnimationUsingKeyFrames>
            </Storyboard>

        </ResourceDictionary>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="ToggleButton.Checked" SourceName="toggleBtnRecolher">
            <BeginStoryboard Storyboard="{StaticResource OnChecked}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="ToggleButton.Unchecked" SourceName="toggleBtnRecolher">
            <BeginStoryboard Storyboard="{StaticResource OnUnChecked}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="FrameworkElement.SizeChanged">
            <BeginStoryboard >
                <Storyboard >
                    <BooleanAnimationUsingKeyFrames FillBehavior="Stop"  BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="expanderContainerCadastros" Storyboard.TargetProperty="(Expander.IsExpanded)">
                        <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="False"/>
                    </BooleanAnimationUsingKeyFrames>
                </Storyboard>
            </BeginStoryboard>
            <BeginStoryboard >
                <Storyboard >
                    <BooleanAnimationUsingKeyFrames FillBehavior="Stop"  BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="expanderContainerFavoritos" Storyboard.TargetProperty="(Expander.IsExpanded)">
                        <DiscreteBooleanKeyFrame KeyTime="00:00:00" Value="False"/>
                    </BooleanAnimationUsingKeyFrames>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid x:Name="Principal" Style="{StaticResource StylePrincipal}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Width="200" x:Name="containerCadastros">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Border BorderThickness="3">
                    <Border Style="{DynamicResource BackgroundBorderTitle}">
                        <Grid>
                            <TextBlock x:Name="txtMenu" Margin="5,0,0,0" FontSize="18" VerticalAlignment="Center" Text="Menu" Foreground="White" Width="auto" HorizontalAlignment="Left"/>
                            <StackPanel Width="auto" HorizontalAlignment="Right" Orientation="Horizontal">
                                <ToggleButton x:Name="toggleBtnRecolher" Style="{StaticResource ToggleButtonRecolher}" Width="25" IsChecked="True"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Border>
                <Grid Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Expander x:Name="expanderContainerCadastros" Header="Cadastros" Style="{StaticResource expanderRecolher}">
                                <ListBox ItemsSource="{Binding _lWindows}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding xHeader}" 
												Style="{StaticResource btnListItem}"
												Tag="{Binding xName}"
												Command="{Binding DataContext.AddWindowCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}, Mode=FindAncestor}}" CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
                                                    />
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                        </Expander>
                        <Expander x:Name="expanderContainerFavoritos" Header="Favoritos" Grid.Row="1" Style="{StaticResource expanderRecolher}">
                            <ListBox/>
                        </Expander>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
        <Grid x:Name="grdForms" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Margin="5,5,5,5"
				BorderThickness="1" BorderBrush="Black">
                <DockPanel LastChildFill="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="2"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <ToolBar Style="{StaticResource toolBarCadastro}">
                            <Button Command="{Binding _currentTab._currentDataContext.commandNovo}" Content="Novo" Style="{StaticResource StyleButton1}"/>
                            <Button Command="{Binding _currentTab._currentDataContext.commandAlterar}" Content="Alterar" Style="{StaticResource StyleButton1}"/>
                            <Button Command="{Binding _currentTab._currentDataContext.commandDeletar}" Content="Excluir" Style="{StaticResource StyleButton1}"/>
                            <Button Command="{Binding _currentTab._currentDataContext.commandSalvar}" CommandParameter="{Binding _currentTab._content}" Content="Salvar" Style="{StaticResource StyleButton1}"/>
                            <Button Command="{Binding _currentTab._currentDataContext.commandCancelar}" Content="Cancelar" Style="{StaticResource StyleButton1}"/>
                            <Button Command="{Binding _currentTab._currentDataContext.commandCopiar}" Content="Duplicar" Style="{StaticResource StyleButton1}"/>
                            <Button Command="{Binding _currentTab._currentDataContext.commandPesquisar}" Content="Pesquisar" Style="{StaticResource StyleButton1}"/>
                            <DockPanel LastChildFill="True" Width="306" Margin="20,0,0,0"  >
                                <Button       
                                    x:Name="btnPrimeiro"
                                    Content="Primeiro" 
                                    Command="{Binding _currentTab._currentDataContext.navegarCommand}" CommandParameter="{Binding ElementName= btnPrimeiro, Path=Content}"   Style="{StaticResource StyleButton1}" DockPanel.Dock="Left" Height="20"  Width="50" Margin="0,0,2,0" Foreground="#FFECE5E5"/>
                                <Button 
                                    x:Name="btnAnterior"
                                    Content="Anterior"
                                    Command="{Binding _currentTab._currentDataContext.navegarCommand}" CommandParameter="{Binding ElementName= btnAnterior, Path=Content}"
                                    Style="{StaticResource StyleButton1}" DockPanel.Dock="Left" Height="20"  Width="50" Margin="0" Foreground="#FFECE5E5"/>
                                <Button 
                                    x:Name="btnUltimo"
                                    Content="Ultimo"
                                    Command="{Binding _currentTab._currentDataContext.navegarCommand}" CommandParameter="{Binding ElementName= btnUltimo, Path=Content}"
                                    Style="{StaticResource StyleButton1}" DockPanel.Dock="Right" Height="20"  Width="50" Margin="2,0,0,0" Foreground="#FFECE5E5"/>
                                <Button Content="Proximo" 
                                        x:Name="btnProximo"
                                        Command="{Binding _currentTab._currentDataContext.navegarCommand}" CommandParameter="{Binding ElementName= btnProximo, Path=Content}"
                                        Style="{StaticResource StyleButton1}" DockPanel.Dock="Right" Height="20"  Width="50" Foreground="#FFECE5E5"/>
                                <Label Content="{Binding _currentTab._currentDataContext.sText}"  VerticalAlignment="Stretch" Margin="2,0" HorizontalAlignment="Center" Foreground="#FFECE5E5"/>
                            </DockPanel>
                        </ToolBar>
                        <Rectangle Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Fill="Black"/>
                        <TabControl Grid.Row="2" SelectedItem="{Binding _currentTab}" x:Name="tabControlItens" ItemsSource="{Binding _lTabPagesAtivas}">
                            <TabControl.ItemTemplate>                               
                                <DataTemplate>
                                    <DockPanel Height="24" LastChildFill="True">
                                        <Button DockPanel.Dock="Right"                                            
											Width="17"
											Height="17"
											Style="{DynamicResource BtnFechar}"
											Command="{Binding DataContext.DelWindowCommand, RelativeSource={RelativeSource AncestorType={x:Type TabControl}, Mode=FindAncestor}}"
											CommandParameter="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}" FontSize="13.333" FontFamily="OCR A Extended">
                                            <ContentPresenter Content="X" HorizontalAlignment="Center" VerticalAlignment="Center" Height="14.833" Width="8.5"/>
                                        </Button>
                                        <Button DockPanel.Dock="Right" Width="17" Height="17" Style="{DynamicResource BtnFechar}" FontFamily="OCR A Extended" FontSize="14.667">
                                            <ContentPresenter Content="-"/>
                                        </Button>

                                        <Label Grid.Column="0" Content="{Binding _header}"
											DockPanel.Dock="Left"/>
                                    </DockPanel>
                                </DataTemplate>
                            </TabControl.ItemTemplate>
                            <TabControl.ContentTemplate>
                                <DataTemplate>
                                    <DockPanel LastChildFill="True">
                                        <ContentControl Content="{Binding _content}"/>
                                    </DockPanel>
                                </DataTemplate>
                            </TabControl.ContentTemplate>
                        </TabControl>
                    </Grid>

                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>