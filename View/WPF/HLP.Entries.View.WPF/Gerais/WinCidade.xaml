<runtime:WindowsBase
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:runtime="clr-namespace:HLP.Comum.View.Formularios;assembly=HLP.Comum.View"
        xmlns:System="clr-namespace:System;assembly=mscorlib"         
        xmlns:Components="clr-namespace:HLP.Comum.View.Components;assembly=HLP.Comum.View"  
        xmlns:c="clr-namespace:HLP.Comum.View.Converters;assembly=HLP.Comum.View"
        x:Class="HLP.Entries.View.WPF.Gerais.WinCidade"    
        Title="Cidade" NameView="vwCidade">
    <Window.Resources>
        <c:IntStringConverter x:Key="intStringConverter"></c:IntStringConverter>
    </Window.Resources>
    <Grid>
        <Expander Header="Cidades" IsExpanded="True">
            <WrapPanel Orientation="Vertical" Margin="0,10,0,0">
                <Components:HlpTextBox Caption="Código" Padding="0,3,0,0" WidthLabel="75" Margin="10,0,10,2"
                               Text="{Binding currentModel.idCidade, Mode=TwoWay}" IsReadOnly="True" Height="27" HorizontalAlignment="Left" Width="200"/>
                <Components:HlpTextBox 
            Caption="Cidade" Padding="0,3,0,0" WidthLabel="75"
                               Text="{Binding currentModel.xCidade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,
                ValidatesOnDataErrors=True, NotifyOnValidationError=True}" IsEnabled="{Binding bIsEnabled}" Margin="10,0,10,2" Height="27" HorizontalAlignment="Left" Width="200"/>
                <Components:HlpTextBox 
            Caption="Ibge" Padding="0,3,0,0" WidthLabel="75"
                               IsEnabled="{Binding bIsEnabled}" Margin="10,0,10,2" Text="{Binding currentModel.cIbge, Converter={StaticResource intStringConverter}, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Height="27" HorizontalAlignment="Left" Width="200"/>
                <Components:HlpPesquisa 
            Text="{Binding currentModel.idUF, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
            
            x:Name="teste" Caption="UF" Padding="0,3,0,0" WidthLabel="75" TableView="vwUF" FieldPesquisa="ID"
                                 IsEnabled="{Binding bIsEnabled}" Margin="10,0,10,2" Height="27" HorizontalAlignment="Left" Width="396"
                                 >
                    <Components:HlpPesquisa.Items>
                        <System:String>xSiglaUf</System:String>
                        <System:String>xUf</System:String>
                    </Components:HlpPesquisa.Items>
                </Components:HlpPesquisa>
            </WrapPanel>
        </Expander>
    </Grid>
</runtime:WindowsBase>
