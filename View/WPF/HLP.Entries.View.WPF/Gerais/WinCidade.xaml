<runtime:WindowsBase
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:runtime="clr-namespace:HLP.Comum.View.Formularios;assembly=HLP.Comum.View"
        xmlns:System="clr-namespace:System;assembly=mscorlib"         
        xmlns:Components="clr-namespace:HLP.Comum.View.Components;assembly=HLP.Comum.View"  
        xmlns:c="clr-namespace:HLP.Comum.View.Converters;assembly=HLP.Comum.View"
        x:Class="HLP.Entries.View.WPF.Gerais.WinCidade"    
        Title="Cidade" NameView="vwCidade">
    <Window.Resources>
        <c:IntStringConverter x:Key="intStringConverter"></c:IntStringConverter>
    </Window.Resources>
    <StackPanel Orientation="Vertical">
        <Components:HlpTextBox Caption="Id" Padding="0,3,0,0" WidthLabel="75" Margin="10,26,581,0"
                               Text="{Binding currentModel.idCidade, Mode=TwoWay}" IsEnabled="False"/>
        <Components:HlpTextBox Validation.ErrorTemplate="{StaticResource exceptionComp}"
            Caption="Cidade" Padding="0,3,0,0" WidthLabel="75"
                               Text="{Binding currentModel.xCidade, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,
                ValidatesOnDataErrors=True, NotifyOnValidationError=True}" IsEnabled="{Binding bIsEnabled}" Margin="10,8,360,0"/>
        <Components:HlpTextBox Validation.ErrorTemplate="{StaticResource exceptionComp}"
            Caption="Ibge" Padding="0,3,0,0" WidthLabel="75"
                               IsEnabled="{Binding bIsEnabled}" Margin="10,8,360,0" Text="{Binding currentModel.cIbge, Converter={StaticResource intStringConverter}, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
        <Components:HlpPesquisa 
            Text="{Binding currentModel.idUF, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
            Validation.ErrorTemplate="{StaticResource exceptionComp}"
            x:Name="teste" Caption="UF" Padding="0,3,0,0" WidthLabel="75" TableView="vwUF" FieldPesquisa="ID"
                                 IsEnabled="{Binding bIsEnabled}" Margin="10,8,360,0"
                                 >
            <Components:HlpPesquisa.Items>
                <System:String>xSiglaUf</System:String>
                <System:String>xUf</System:String>
            </Components:HlpPesquisa.Items>
        </Components:HlpPesquisa>
    </StackPanel>

</runtime:WindowsBase>
