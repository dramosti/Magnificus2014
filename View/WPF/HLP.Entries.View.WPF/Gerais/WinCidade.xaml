<runtime:WindowsBase
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:runtime="clr-namespace:HLP.Comum.View.Formularios;assembly=HLP.Comum.View"
        xmlns:System="clr-namespace:System;assembly=mscorlib"         
        xmlns:Components="clr-namespace:HLP.Comum.View.Components;assembly=HLP.Comum.View"  
        xmlns:c="clr-namespace:HLP.Comum.View.Converters;assembly=HLP.Comum.View"
        x:Class="HLP.Entries.View.WPF.Gerais.WinCidade"    
        Title="Cidade" NameView="vwCidade">
    <Window.Resources>
        <c:IntStringConverter x:Key="intStringConverter"></c:IntStringConverter>
    </Window.Resources>
    <StackPanel Orientation="Vertical">
        <Components:HlpTextBox Caption="Id" Padding="0,3,0,0" WidthLabel="100" Margin="10,20,537,0"
    		Text="{Binding currentModel.idCidade, Mode=TwoWay}" IsEnabled="False"/>
        <!--<Components:HlpTextBox Caption="Cidade" Padding="0,3,0,0" WidthLabel="100"
    		Text="{Binding currentModel.xCidade, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" IsEnabled="{Binding bIsEnabled}" 
                               Margin="10,0,423,0"/>-->
        <Components:HlpTextBox Caption="Ibge" Padding="0,3,0,0" WidthLabel="100"
    		IsEnabled="{Binding bIsEnabled}" Margin="10,0,423,0" Text="{Binding currentModel.cIbge, Converter={StaticResource intStringConverter}, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>
        <Components:HlpPesquisa1 
            Text="{Binding currentModel.idUF, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=Default, ValidatesOnDataErrors=True}" IsEnabled="{Binding bIsEnabled}"/>
    </StackPanel>

</runtime:WindowsBase>
