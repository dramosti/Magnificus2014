<runtime:WindowsBase
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        xmlns:v="clr-namespace:HLP.Comum.View.Validates;assembly=HLP.Comum.View"
        xmlns:c="clr-namespace:HLP.Components.View.WPF.Converter;assembly=HLP.Components.View.WPF"
        xmlns:runtime="clr-namespace:HLP.Comum.View.Formularios;assembly=HLP.Comum.View"   
        xmlns:Components="clr-namespace:HLP.Components.View.WPF;assembly=HLP.Components.View.WPF"
    x:Class="HLP.Entries.View.WPF.Gerais.WinUnidadeMedida"
        Title="Unidade Medida" Height="300" Width="448.872" NameView="vwUnidadeMedida">
    <runtime:WindowsBase.Resources>
        <c:IntStringConverter x:Key="intStringValueConverter"></c:IntStringConverter>
    </runtime:WindowsBase.Resources>
    <Grid Name="gridPropriedades">
        <Expander Header="Unidade de Medida" IsExpanded="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"></ColumnDefinition>
                    <ColumnDefinition Width="120*" MaxWidth="120" MinWidth="120"></ColumnDefinition>
                    <ColumnDefinition Width="90*" MaxWidth="90" MinWidth="70"></ColumnDefinition>
                    <ColumnDefinition Width="77*"></ColumnDefinition>                    
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"></RowDefinition>
                    <RowDefinition Height="20"></RowDefinition>
                    <RowDefinition Height="3"></RowDefinition>
                    <RowDefinition Height="20"></RowDefinition>
                    <RowDefinition Height="3"></RowDefinition>
                    <RowDefinition Height="20"></RowDefinition>
                    <RowDefinition Height="3"></RowDefinition>
                    <RowDefinition Height="20"></RowDefinition>
                    <RowDefinition Height="3"></RowDefinition>
                </Grid.RowDefinitions>
                <Components:CustomTextBlock Grid.Column="1" Grid.Row="1" Text="Código" VerticalAlignment="Center"/>
                <Components:CustomTextBox 
                                      IsReadOnly="True"
                                      Text="{Binding currentModel.idUnidadeMedida, Mode=TwoWay,  UpdateSourceTrigger=PropertyChanged}"
                                      ToolTip="Chave principal do registro da Unidade de Medida"
                                      Grid.Column="2" Grid.Row="1"/>
                <Components:CustomTextBlock Grid.Column="1" Grid.Row="3" Text="Sigla Padrão" VerticalAlignment="Center"/>
                <Components:CustomTextBox  Grid.Column="2"  Grid.Row="3"
                                       Text="{Binding currentModel.xSiglaPadrao, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                       IsEnabled="{Binding bIsEnabled}"/>
                <Components:CustomTextBlock Grid.Column="1" Grid.Row="5" Text="Unidade de Medida" VerticalAlignment="Center" Height="15" Margin="0,3"/>
                <Components:CustomTextBox  Grid.Column="2"  Grid.Row="5"
                                       Text="{Binding currentModel.xUnidadeMedida, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                       IsEnabled="{Binding bIsEnabled}"/>
                <Components:CustomTextBlock Grid.Column="1" Grid.Row="7" Text="Casas Decimais" VerticalAlignment="Center" Height="15" Margin="0,3"/>
                <Components:CustomTextBox  Grid.Column="2"  Grid.Row="7"                                       
                                       IsEnabled="{Binding bIsEnabled}">
                    <Binding Path="currentModel.nCasasDecimais"
            			Mode="TwoWay"
            			UpdateSourceTrigger="PropertyChanged"
            			ValidatesOnDataErrors="True"
            			NotifyOnValidationError="True"
            			Converter="{StaticResource intStringValueConverter}">
                        <Binding.ValidationRules>
                            <v:NumericIntValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </Components:CustomTextBox>
            </Grid>
        </Expander>
    </Grid>
</runtime:WindowsBase>
