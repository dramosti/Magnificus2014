<Window x:Class="HLP.Entries.View.WPF.Gerais.WinUF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:HLP.Entries.ViewModel.ViewModels;assembly=HLP.Entries.ViewModel"
        Title="Uf" Height="300" Width="500">
    <Window.Resources>
        <ObjectDataProvider x:Key="odpRegiao" ObjectType="{x:Type src:RegiaoViewModel}"/>
        <ObjectDataProvider x:Key="lRegiao" ObjectInstance="{StaticResource odpRegiao}"  MethodName="GetAll"/>
    </Window.Resources>

    <Grid Margin="10,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="auto" MinHeight="173"/>
        </Grid.RowDefinitions>

        <Label Content="ID" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="22"/>
        <Label Content="Sigla" HorizontalAlignment="Left" Margin="10,41,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="35"/>
        <Label Content="UF" HorizontalAlignment="Left" Margin="10,72,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="24"/>
        <Label Content="Código IBGE" HorizontalAlignment="Left" Margin="10,103,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="76"/>
        <Label Content="Região" HorizontalAlignment="Left" Margin="10,134,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="47"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Height="23" Margin="100,14,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding currentUF.idUF, Mode=TwoWay}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="100,45,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding currentUF.xSiglaUf, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="100,76,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding currentUF.xUf, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="100,107,0,0" Grid.Row="1" TextWrapping="Wrap" Text="{Binding currentUF.cIbgeUf, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" VerticalAlignment="Top" Width="120"/>
        <ComboBox ItemsSource="{Binding Source={StaticResource lRegiao}}" SelectedValuePath="idRegiao" SelectedValue="{Binding currentUF.idRegiao, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" DisplayMemberPath="xRegiao" Margin="100,137,250,14" Grid.Row="1"/>
    </Grid>

</Window>
