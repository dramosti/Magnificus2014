<runtime:WindowsBase 
        xmlns:runtime="clr-namespace:HLP.Comum.View.Formularios;assembly=HLP.Comum.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:Components="clr-namespace:HLP.Comum.View.Components;assembly=HLP.Comum.View"
        x:Class="HLP.Entries.View.WPF.Gerais.Financeiro.WinAgencia"
        Title="Agência" Height="660" Width="1024">
	<Grid>
		<TabControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
			<TabItem Header="Geral">
			 <AdornerDecorator>
				<DockPanel LastChildFill="True">
					<DockPanel DockPanel.Dock="Top" Height="127">
						<Expander Header="Principal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsExpanded="True">
							<DockPanel LastChildFill="True">
								<StackPanel DockPanel.Dock="Left" Width="500">    								
									<Components:HlpTextBox 
										Validation.ErrorTemplate="{StaticResource exceptionComp}"
										Text="{Binding currentModel.idAgencia, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
										IsEnabled="{Binding bIsEnabled}"
										Height="27" Margin="10,10,228,2" Caption="Código" Help="Chave principal do registro da Agencia." WidthLabel="147"/>
									<Components:HlpTextBox 
										Validation.ErrorTemplate="{StaticResource exceptionComp}"
										Text="{Binding currentModel.cAgencia, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
										IsEnabled="{Binding bIsEnabled}"	
										Height="27" Margin="10,0,228,2" Caption="Código da Agencia" Help="Digite um código da Agencia bancária." WidthLabel="147"/>
									<Components:HlpTextBox 
										Validation.ErrorTemplate="{StaticResource exceptionComp}"
										Text="{Binding currentModel.xAgencia, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
										IsEnabled="{Binding bIsEnabled}"
										Height="27" Margin="10,0,10,2" Caption="Nome " Help="Informa o nome por completo da Agência Bancária." WidthLabel="147"/>    								
								</StackPanel>
								<StackPanel>
									<Components:HlpPesquisa 
										Validation.ErrorTemplate="{StaticResource exceptionComp}"
										Text="{Binding currentModel.idBanco, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
										IsEnabled="{Binding bIsEnabled}"
										Height="27" Margin="10,10,20,2" Caption="Banco " Help="Informa o código do Banco. O banco deverá estar cadastro no Formulário de Bancos." WidthLabel="71" FieldPesquisa="ID" TableView="vwBanco">
										<Components:HlpPesquisa.Items>
											<System:String>xBanco</System:String>
											<System:String>cBanco</System:String>
										</Components:HlpPesquisa.Items>
									</Components:HlpPesquisa>
									<Components:HlpTextBox 
										Validation.ErrorTemplate="{StaticResource exceptionComp}"
										Text="{Binding currentModel.xTelefone, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
										IsEnabled="{Binding bIsEnabled}"
										Height="27" Margin="10,0,330,2" Caption="Telefone" Help="Informar o telefone principal da Agencia Bancária" WidthLabel="71"/>
									<Components:HlpTextBox 
										Validation.ErrorTemplate="{StaticResource exceptionComp}"
										Text="{Binding currentModel.xFax, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
										IsEnabled="{Binding bIsEnabled}"
										Height="27" Margin="10,0,330,2" Caption="Fax" Help="Informar o Fax principal da Agencia Bancária." WidthLabel="71"/>
								</StackPanel>
							</DockPanel>
						</Expander>    					
					</DockPanel>
					<DockPanel>
						<Expander Header="Endereço" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" IsExpanded="True">
							<DataGrid
						  IsEnabled="{Binding bIsEnabled}"
                          AutoGenerateColumns="False" 
                          SelectionUnit="CellOrRowHeader" CanUserReorderColumns="False"
                          CanUserDeleteRows="True"
                          CanUserAddRows="True"
                        >
								<DataGrid.Columns>
									<DataGridComboBoxColumn ClipboardContentBinding="{x:Null}" Header="Principal" SelectedValueBinding="{x:Null}" SelectedItemBinding="{x:Null}" TextBinding="{x:Null}" Width="100"/>
									<DataGridTextColumn Binding="{Binding Path=xNome, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" Header="Nome" Width="100"/>
									<DataGridComboBoxColumn ClipboardContentBinding="{x:Null}" Header="Tipo de Endereço" SelectedValueBinding="{x:Null}" SelectedItemBinding="{x:Null}" TextBinding="{x:Null}" Width="120"/>
									<DataGridComboBoxColumn ClipboardContentBinding="{x:Null}" Header="Tipo de Logadouro" SelectedValueBinding="{x:Null}" SelectedItemBinding="{x:Null}" TextBinding="{x:Null}" Width="120"/>
									<DataGridTextColumn Binding="{Binding Path=xCEP, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" Header="CEP" Width="100"/>
									<DataGridTextColumn Binding="{Binding Path=xEndereco, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" Header="Endereço" Width="100"/>
									<DataGridTextColumn Binding="{Binding Path=nNumero, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" Header="Número" Width="80"/>
									<DataGridTextColumn Binding="{Binding Path=xComplemento, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" Header="Complemento" Width="100"/>
									<DataGridTextColumn Binding="{Binding Path=xBairro, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" Header="Bairro" Width="100"/>
									<DataGridComboBoxColumn ClipboardContentBinding="{x:Null}" Header="Cidade" SelectedValueBinding="{x:Null}" SelectedItemBinding="{x:Null}" TextBinding="{x:Null}" Width="150"/>
									<DataGridTextColumn Binding="{Binding Path=xCaixaPostal, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" Header="Caixa Postal" Width="100"/>
									<DataGridTextColumn Binding="{Binding Path=xLatitude, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" Header="Latitude" Width="100"/>
									<DataGridTextColumn Binding="{Binding Path=xLongitude, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" Header="Longitude" Width="100"/>
									<DataGridTextColumn Binding="{Binding Path=xFusoHorario, UpdateSourceTrigger=LostFocus, NotifyOnValidationError=True, ValidatesOnDataErrors=True}" Header="Fuso Horário" Width="100"/>
									
								</DataGrid.Columns>
							</DataGrid>
						</Expander>												
					</DockPanel>    				
				</DockPanel>
			 </AdornerDecorator>
			</TabItem>
			<TabItem Header="Contato">
			  <AdornerDecorator>
				<DockPanel VerticalAlignment="Stretch" Margin="0,0,564,0">
					<DataGrid>
						<DataGrid.Columns>
							<DataGridComboBoxColumn ClipboardContentBinding="{x:Null}" Header="Contato" SelectedValueBinding="{x:Null}" SelectedItemBinding="{x:Null}" TextBinding="{x:Null}"/>
						</DataGrid.Columns>					
					</DataGrid>
				</DockPanel>
			  </AdornerDecorator>
			</TabItem>
				<TabItem Header="Hierarquia">
					<StackPanel>
						<TreeView Height="426" Margin="10,10,571,0"/>
					</StackPanel>			
				</TabItem>		  
		</TabControl>        
	</Grid>
</runtime:WindowsBase>
