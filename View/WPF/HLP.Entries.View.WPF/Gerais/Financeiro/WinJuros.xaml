<runtime:WindowsBase 
        xmlns:runtime="clr-namespace:HLP.Comum.View.Formularios;assembly=HLP.Comum.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:Components="clr-namespace:HLP.Comum.View.Components;assembly=HLP.Comum.View"
        x:Class="HLP.Entries.View.WPF.Gerais.Financeiro.WinJuros"
        Title="Juros" Height="660" Width="1024">
	<Grid>
		<Expander Header="Expander" HorizontalAlignment="Left" Height="347.5" VerticalAlignment="Top" Width="647.5" IsExpanded="True">
			<StackPanel>
				<Components:HlpTextBox 
					Validation.ErrorTemplate="{StaticResource exceptionComp}"
					Text="{Binding currentModel.idJuros, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"			
					IsEnabled="{Binding bIsEnabled}"
					Height="27" Margin="10,10,384,2" Caption="Código do Juros" Help="Chave principal do juros" WidthLabel="166"/>
				<Components:HlpTextBox 
					Validation.ErrorTemplate="{StaticResource exceptionComp}"
					Text="{Binding currentModel.xNome, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"			
					IsEnabled="{Binding bIsEnabled}"
					Height="27" Margin="10,0,384,2" Caption="Juros" Help="Insira um código para o Juros." WidthLabel="166"/>
				<Components:HlpTextBox 
					Validation.ErrorTemplate="{StaticResource exceptionComp}"
					Text="{Binding currentModel.xDescricao, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"			
					IsEnabled="{Binding bIsEnabled}"
					Height="27" Margin="10,0,200,2" Caption="Descrição" Help="Insira a descrição do código de juros. " WidthLabel="166"/>
				<Components:HlpTextBox 
					Validation.ErrorTemplate="{StaticResource exceptionComp}"
					Text="{Binding currentModel.pJuros, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"			
					IsEnabled="{Binding bIsEnabled}"
					Height="27" Margin="10,0,384,2" Caption="% de Juros" Help="Insira a porcentagem de juros que se aplica" WidthLabel="166"/>
				<Components:HlpTextBox 
					Validation.ErrorTemplate="{StaticResource exceptionComp}"
					Text="{Binding currentModel.nQuantidadeDiaMes, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"			
					IsEnabled="{Binding bIsEnabled}"
					Height="27" Margin="10,0,319.334,2" Caption="Quantidade Juros por:" Help="Insira o número de dias ou meses para aplicar o código de juros aos pagamentos. O valor deste campo se baseia no intervalo do período selecionado no campo Dia/Mês. " WidthLabel="166"/>
				<Components:HlpComboBox 
					Validation.ErrorTemplate="{StaticResource exceptionComp}"
					SelectedValue	="{Binding currentModel.stDiaMes, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"			
					IsEnabled="{Binding bIsEnabled}"
					Height="27" Margin="10,0,306,2" Caption="Dias/Mês" Help="Selecione se é Dia ou Mês para aplicar a quantidade informada no campo quantidade. " WidthLabel="166">
					<Components:HlpComboBox.Items>
							<System:String>0-Dias</System:String>
                            <System:String>1-Mês</System:String>						
					</Components:HlpComboBox.Items>
				</Components:HlpComboBox>
				<Components:HlpTextBox 
					Validation.ErrorTemplate="{StaticResource exceptionComp}"
					Text="{Binding currentModel.nCarencia, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"			
					IsEnabled="{Binding bIsEnabled}"
					Height="27" Margin="10,0,319.334,2" Caption="Carência" Help="Insira o número de dias de carência permitidos antes da aplicação do juros. Os juros são calculados após o número especificado de dias de carência a partir da data de vencimento do pagamento. " WidthLabel="166"/>
			</StackPanel>
		</Expander>
        
	</Grid>
</runtime:WindowsBase>
