<runtime:WindowsBase 
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:runtime="clr-namespace:HLP.Comum.View.Formularios;assembly=HLP.Comum.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Components="clr-namespace:HLP.Comum.View.Components;assembly=HLP.Comum.View"
        x:Class="HLP.Entries.View.WPF.Fiscal.WinCfop"
        Title="CFOP" Height="660" Width="1024" NameView="vwCfop">
    <StackPanel>
        <Expander Header="Principal" IsExpanded="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="3"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="3"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="3"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="90" MaxWidth="90" MinWidth="70"/>
                    <ColumnDefinition Width="173*"/>
                    <ColumnDefinition Width="120*"/>
                    <ColumnDefinition Width="496*"/>
                </Grid.ColumnDefinitions>
                <Components:CustomTextBlock Text="Código" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"/>
                <Components:CustomTextBox 
                                      IsReadOnly="True"
                                      Text="{Binding currentModel.idCfop, Mode=TwoWay,  UpdateSourceTrigger=PropertyChanged}"
                                      ToolTip="Chave principal do registro da CFOP"
                                      Grid.Column="2" Grid.Row="1"/>
                <Components:CustomTextBlock Text="CFOP" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"/>
                <Components:CustomTextBox  Grid.Column="2"  Grid.Row="3"
                                       Text="{Binding currentModel.cCfop, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                       IsEnabled="{Binding bIsEnabled}"
                                       ToolTip="Informar o código padrão da CFOP fornecida pelo seu Órgão Emissor"/>
                <Components:CustomTextBlock Text="Descrição Resumida" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center"/>
                <Components:CustomTextBox  Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="5"
                                       Text="{Binding currentModel.xCfopResumida, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                       IsEnabled="{Binding bIsEnabled}"
                                       ToolTip="Informar uma descrição abreviada do CFOP. Esse campo sairá na NF por isso que há necessidade da abreviação da Descrição da CFOP."/>
                <Components:CustomTextBlock Text="Descrição" Grid.Row="7" Grid.Column="1" VerticalAlignment="Center"/>
                <Components:CustomTextBox  Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="7"
                                       Text="{Binding currentModel.xCfop, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                       IsEnabled="{Binding bIsEnabled}"
                                       ToolTip="Descrição Detalhada da CFOP"/>         
                

            </Grid>
        </Expander>      
    </StackPanel>
</runtime:WindowsBase>
