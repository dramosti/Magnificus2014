<runtime:WindowsBase 
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:runtime="clr-namespace:HLP.Components.View.WPF;assembly=HLP.Components.View.WPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:HLP.Components.View.WPF.Converter;assembly=HLP.Components.View.WPF"
        xmlns:ccx="clr-namespace:HLP.Components.ViewModel.ViewModels;assembly=HLP.Components.ViewModel"
        xmlns:Components="clr-namespace:HLP.Components.View.WPF;assembly=HLP.Components.View.WPF"
        x:Class="HLP.Entries.View.WPF.Gerais.WinProduto"
        Title="WinProduto" Height="660" Width="1024" NameView="vwProduto">
    <runtime:WindowsBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HLP.Resources.View.WPF;component/Styles/Components/UserControlStyles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <conv:NotConverter x:Key="notConverter"/>
            <conv:DateTimeTimeSpanConverter x:Key="timeSpanConverter"/>
            <conv:PorcentagemConverter x:Key="porcConverter"/>
            <conv:MoedaConverter x:Key="moedaConverter"/>
            <conv:ComboBoxDisplayConverter x:Key="cbxDisplayConv"/>
            <ObjectDataProvider x:Key="odp" ObjectType="{x:Type ccx:FillComboBoxViewModel}"/>
            <ObjectDataProvider x:Key="lResultUsuarios" ObjectInstance="{StaticResource odp}" MethodName="GetAllValuesToComboBox">
                <ObjectDataProvider.MethodParameters>
                    <System:String>vwFuncionarioUsuarioToComboBox</System:String>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
        </ResourceDictionary>
    </runtime:WindowsBase.Resources>
    <Grid Background="{StaticResource StyleMainWindowDefault}">
        <TabControl x:Name="tbPrincipal">
            <TabItem Header="Principal">
                <AdornerDecorator>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Expander Header="Identificação" IsExpanded="True" Style="{StaticResource ExpanderPadrao}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="125" MinWidth="125"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="90" MinWidth="90"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                </Grid.RowDefinitions>
                                <!--Label-->

                                <Components:CustomTextBlock Text="Código" Grid.Column="1" Grid.Row="1"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Código Alternativo" Grid.Column="1" Grid.Row="2"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Código EAN" Grid.Column="1" Grid.Row="3"></Components:CustomTextBlock>

                                <!--Components-->

                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="1" stCompPosicao="fieldId"
                                    IsReadOnly="True"
									Text="{Binding currentModel.idProduto, Mode=TwoWay,  UpdateSourceTrigger=PropertyChanged}"
									ToolTip="Chave principal do registro Produto">
                                </Components:CustomTextBox>
                                <Components:CustomTextBox stCompPosicao="first"
                                    Grid.Column="2" Grid.Row="2"
                                    Text="{Binding currentModel.cAlternativo, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="É o código alternativo do Produto/Material. É sugerido pelo sistema, porém pode ser alterado com um código alfanumérico (letras e números) ou o código de barras.">
                                </Components:CustomTextBox>
                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="3"
                                    Text="{Binding currentModel.cEan, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Código EAN do produto">
                                </Components:CustomTextBox>

                            </Grid>
                        </Expander>
                        <Expander Header="Item" Grid.Row="1" IsExpanded="True" Style="{StaticResource ExpanderPadrao}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="125" MinWidth="125"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="250"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                </Grid.RowDefinitions>
                                <!--Label-->

                                <Components:CustomTextBlock Text="Nome de Pesquisa" Grid.Column="1" Grid.Row="1"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Nome Comercial" Grid.Column="1" Grid.Row="2"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Nome Fiscal" Grid.Column="1" Grid.Row="3"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Nome Inglês" Grid.Column="1" Grid.Row="4"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Tipo do Produto" Grid.Column="1" Grid.Row="5"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Caminho da Foto" Grid.Column="1" Grid.Row="6"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Memorando" Grid.Column="1" Grid.Row="7"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Tipo de Serviço" Grid.Column="1" Grid.Row="8"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Data do Cadastro" Grid.Column="1" Grid.Row="9"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Usuário de Inclusão" Grid.Column="1" Grid.Row="10"></Components:CustomTextBlock>

                                <!--Components-->

                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="1"
                                    Text="{Binding currentModel.xPesquisa, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Descrição de pesquisa do Produto ">
                                </Components:CustomTextBox>
                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="2"
                                    Text="{Binding currentModel.xComercial, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Descrição Comercial do Produto.">
                                </Components:CustomTextBox>
                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="3"
                                    Text="{Binding currentModel.xFiscal, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Descrição Fiscal do Produto">
                                </Components:CustomTextBox>
                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="4"
                                    Text="{Binding currentModel.xIngles, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Descrição em Inglês do Produto">
                                </Components:CustomTextBox>
                                <Components:CustomPesquisa 
									Grid.Column="2" Grid.Row="5" NameWindowCadastro="WinTipoProduto"
									xIdPesquisa="{Binding currentModel.idTipoProduto, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Selecione qual é o tipo do produto para a movimentação do mesmo." TableView="vwTipoProduto" FieldPesquisa="ID">
                                    <Components:CustomPesquisa.Items>
                                        <System:String>xTipo</System:String>
                                        <System:String>xDescricao</System:String>
                                    </Components:CustomPesquisa.Items>
                                </Components:CustomPesquisa>
                                <Components:HlpUserControlBtnImage  Grid.Column="2" Grid.Row="6"
                                        IsEnabled="{Binding bIsEnabled}" 
                                        xPathCaminho="{Binding currentModel.xFoto, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                                                    ToolTip="Informe o caminho da foto do produto"
>
                                </Components:HlpUserControlBtnImage>
                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="7"
                                    Text="{Binding currentModel.xObs, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Memorando do Produto">
                                </Components:CustomTextBox>
                                <Components:CustomPesquisa 
									Grid.Column="2" Grid.Row="8"
									xIdPesquisa="{Binding currentModel.idTipoServico, Mode=TwoWay, NotifyOnValidationError=True, 
                                    UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                    FieldPesquisa="ID" TableView="vwTipoServico" NameWindowCadastro="WinTipoServico">
                                    <Components:CustomPesquisa.Items>
                                        <System:String>cTipoServico</System:String>
                                        <System:String>xTipoServico</System:String>
                                    </Components:CustomPesquisa.Items>
                                    <Components:CustomPesquisa.Style>
                                        <Style BasedOn="{StaticResource TextBox_PESQUISA}" TargetType="{x:Type Components:CustomPesquisa}">
                                            <Setter Property="FrameworkElement.IsEnabled" Value="False"></Setter>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding bIsEnabled}" Value="True"></Condition>
                                                        <Condition Binding="{Binding currentModel.IsService}" Value="True"></Condition>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="FrameworkElement.IsEnabled" Value="True"></Setter>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Components:CustomPesquisa.Style>
                                </Components:CustomPesquisa>
                                <Components:HlpDatePicker
                                    Grid.Column="2" Grid.Row="9" Height="20" Margin="0,0,0,3" stFormatoDtPicker="date"
                                    xTextDate="{Binding currentModel.dCadastro, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="False"
									ToolTip="Sistema informará automaticamente quando cadastrado o item, campo desbloqueado para o usuário.">
                                </Components:HlpDatePicker>
                                <Components:CustomPesquisa 
									Grid.Column="2" Grid.Row="10" NameWindowCadastro="WinFuncionario"
									xIdPesquisa="{Binding currentModel.idFuncionario, Mode=TwoWay, NotifyOnValidationError=True, 
                                    UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="False"									 
                                    ToolTip="Informa o usuário que cadastrou o item." FieldPesquisa="ID" TableView="vwFuncionario">
                                    <Components:CustomPesquisa.Items>
                                        <System:String>xNome</System:String>
                                        <System:String>xCodigoAlternativo</System:String>
                                    </Components:CustomPesquisa.Items>
                                </Components:CustomPesquisa>
                            </Grid>
                        </Expander>
                        <Expander Header="Grupos" Grid.Row="2" IsExpanded="True" Style="{StaticResource ExpanderPadrao}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="125" MinWidth="125"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="325" MinWidth="325"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                </Grid.RowDefinitions>
                                <!--Label-->

                                <Components:CustomTextBlock Text="Família do Produto" Grid.Column="1" Grid.Row="1"></Components:CustomTextBlock>

                                <!--Components-->

                                <Components:CustomPesquisa 
									Grid.Column="2" Grid.Row="1"
									xIdPesquisa="{Binding currentModel.idFamiliaProduto, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}" NameWindowCadastro="WinFamiliaProduto"
									ToolTip="Informar a que família ou grupo o item pertence." FieldPesquisa="ID" TableView="vwFamiliaProduto">
                                    <Components:CustomPesquisa.Items>
                                        <System:String>xFamiliaProduto</System:String>
                                        <System:String>xDescricao</System:String>
                                    </Components:CustomPesquisa.Items>
                                </Components:CustomPesquisa>

                            </Grid>
                        </Expander>
                    </Grid>
                </AdornerDecorator>
            </TabItem>
            <TabItem Header="Dados de Estoque">
                <AdornerDecorator>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Expander Header="Configuração" Style="{StaticResource ExpanderPadrao}" IsExpanded="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="170" MinWidth="170"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="80" MinWidth="80"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="40" MinWidth="40"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="120" MinWidth="120"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                </Grid.RowDefinitions>
                                <!--Label-->

                                <Components:CustomTextBlock Text="Peso Bruto" Grid.Column="1" Grid.Row="1"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Peso Líquido" Grid.Column="1" Grid.Row="2"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Prazo de Validade" Grid.Column="1" Grid.Row="3"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Data de Bloqueio" Grid.Column="1" Grid.Row="8"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Estoque Mínimo" Grid.Column="1" Grid.Row="4"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Estoque Máximo" Grid.Column="1" Grid.Row="5"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Unidade de Medida" Grid.Column="1" Grid.Row="6"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Ativo" Grid.Column="1" Grid.Row="7"></Components:CustomTextBlock>

                                <!--Components-->

                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="1"
                                    Text="{Binding currentModel.nPesoBruto, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="É o peso bruto do produto. O mesmo será calculado de acordo com as quantidades vendidas e adicionado nos dados adicionais da nota fiscal.">
                                </Components:CustomTextBox>
                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="2"
                                    Text="{Binding currentModel.nPesoLiquido, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="É o peso líquido do produto. O mesmo será calculado de acordo com as quantidades vendidas e adicionado nos dados adicionais da nota fiscal.">
                                </Components:CustomTextBox>
                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="3"
                                    Text="{Binding currentModel.nPrazoValidade, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Informar o prazo de validade do produto em dias.">
                                </Components:CustomTextBox>
                                <Components:HlpDatePicker
                                    Grid.Column="2" Grid.Row="8" Height="20" Margin="0,0,0,3" stFormatoDtPicker="date" Grid.ColumnSpan="2"
                                    xTextDate="{Binding currentModel.dBloqueio, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="False"
									ToolTip="Informa automaticamente a data de quando o produto foi desativado.">
                                </Components:HlpDatePicker>
                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="4"
                                    Text="{Binding currentModel.nEstoqueMinimo, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Informar a quantidade mínima que deve permanecer em estoque, para que o sistema faça um controle de estoque crítico através de um relatório padrão.">
                                </Components:CustomTextBox>
                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="5"
                                    Text="{Binding currentModel.nEstoqueMaximo, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Informar a quantidade máxima que deve permanecer em estoque, para que o sistema faça um controle de estoque máximo na hora de cotações e compras.">
                                </Components:CustomTextBox>
                                <Components:CustomPesquisa 
									Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="3"
									xIdPesquisa="{Binding currentModel.idUnidadeMedidaEstoque, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Informe a unidade de medida padrão de estoque, essa unidade será a padrão para todos os tipos de conversões a serem feitas."
                                    TableView="vwUnidadeMedida" FieldPesquisa="ID" NameWindowCadastro="WinUnidadeMedida">
                                    <Components:CustomPesquisa.Items>
                                        <System:String>xSiglaPadrao</System:String>
                                        <System:String>xUnidadeMedida</System:String>
                                    </Components:CustomPesquisa.Items>
                                </Components:CustomPesquisa>
                                <Components:CustomCheckBox
                                    Grid.Column="2" Grid.Row="7"
                                    IsChecked="{Binding currentModel.Ativo, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Desmarque a opção se o produto não estiver ativo, desmarcando o produto não será mais mostrado em nenhuma tela seja ela de recebimento, estoque, produção ou vendas.">
                                </Components:CustomCheckBox>

                            </Grid>
                        </Expander>
                        <Expander Header="Localização" Grid.Row="1" Style="{StaticResource ExpanderPadrao}" IsExpanded="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="170" MinWidth="170"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="250" MinWidth="250"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                </Grid.RowDefinitions>
                                <!--Label-->

                                <Components:CustomTextBlock Text="Localização" Grid.Column="1" Grid.Row="1"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Depósito" Grid.Column="1" Grid.Row="2"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Site" Grid.Column="1" Grid.Row="3"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Fabricante" Grid.Column="1" Grid.Row="4"></Components:CustomTextBlock>

                                <!--Components-->

                                <Components:CustomPesquisa 
									Grid.Column="2" Grid.Row="1"
									xIdPesquisa="{Binding currentModel.idProdutoLocalizacao, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Informar qual a localização do produto dentro do depósito e em seu devido site." TableView="vwProdutoLocalizacao" FieldPesquisa="ID">
                                    <Components:CustomPesquisa.Items>
                                        <System:String>xNome</System:String>
                                        <System:String>xDescricao</System:String>
                                    </Components:CustomPesquisa.Items>
                                </Components:CustomPesquisa>
                                <Components:CustomPesquisa 
									Grid.Column="2" Grid.Row="2"
									xIdPesquisa="{Binding currentModel.idDeposito, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Informar o depósito em que o produto está localizado. Caso utilize a opção de localização o campo depósito é preenchido automaticamente." 
                                    TableView="vwDeposito" FieldPesquisa="ID" NameWindowCadastro="WinDeposito">
                                    <Components:CustomPesquisa.Items>
                                        <System:String>xDeposito</System:String>
                                        <System:String>xDescricao</System:String>
                                    </Components:CustomPesquisa.Items>
                                </Components:CustomPesquisa>
                                <Components:CustomPesquisa 
									Grid.Column="2" Grid.Row="3"
									xIdPesquisa="{Binding currentModel.idSite, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="False"
									ToolTip="Informar o depósito em que o produto está localizado. Caso utilize a opção de localização o campo depósito é preenchido automaticamente." 
                                    TableView="vwSite" FieldPesquisa="ID" NameWindowCadastro="WinDeposito">
                                    <Components:CustomPesquisa.Items>
                                        <System:String>xSite</System:String>
                                        <System:String>xDescricao</System:String>
                                    </Components:CustomPesquisa.Items>
                                </Components:CustomPesquisa>
                                <Components:CustomPesquisa 
									Grid.Column="2" Grid.Row="4"
									xIdPesquisa="{Binding currentModel.idFabricante, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Informe o fabricante do produto." TableView="vwFabricante" FieldPesquisa="ID" NameWindowCadastro="WinFabricante">
                                    <Components:CustomPesquisa.Items>
                                        <System:String>xFantasia</System:String>
                                        <System:String>xRazao</System:String>
                                    </Components:CustomPesquisa.Items>
                                </Components:CustomPesquisa>

                            </Grid>
                        </Expander>
                        <Expander Header="Dimensão" Grid.Row="2" Style="{StaticResource ExpanderPadrao}" IsExpanded="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="170"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="90" MinWidth="90"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="5"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                </Grid.RowDefinitions>
                                <!--Label-->

                                <Components:CustomTextBlock Text="Profundidade Bruta" Grid.Column="1" Grid.Row="1"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Largura Bruta" Grid.Column="1" Grid.Row="2"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Altura Bruta" Grid.Column="1" Grid.Row="3"></Components:CustomTextBlock>

                                <!--Components-->

                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="1"
                                    Text="{Binding currentModel.nProfundidadeBruta, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Informar profundidade da unidade de estoque que inclui a embalagem.">
                                </Components:CustomTextBox>
