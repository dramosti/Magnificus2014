                                    Grid.Column="2" Grid.Row="1"
                                    Text="{Binding currentModel.vCompra, Mode=TwoWay, Converter={StaticResource moedaConverter},
                                    NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="O Magníficus informará automaticamente o valor de aquisição do produto, baseado sempre no valor de custo do produto.">
                                </Components:CustomTextBox>
                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="2"
                                    Text="{Binding currentModel.nLoteMinimoCompras, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Informação sobre lote mínimo para compra, baseando sempre na unidade de medida de compras.">
                                </Components:CustomTextBox>
                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="3"
                                    Text="{Binding currentModel.pEntregaExcedenteCompra, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Insira o valor aceitável da entrega excedente como um valor. Se o número de itens entregues for maior que o numero encomendado, você poderá definir um limite para a porcentagem de material em excesso permitida bloqueando o recebimento do material">
                                </Components:CustomTextBox>
                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="4"
                                    Text="{Binding currentModel.pEntregaInsuficienteCompra, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Insira o valor aceitável da entrega insuficiente como uma porcentagem. Se o número de itens entregues for menor que o número encomendado, você poderá bloqueá-la.">
                                </Components:CustomTextBox>
                                <Components:CustomPesquisa     
									Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="2"
									xIdPesquisa="{Binding currentModel.idUnidadeMedidaCompras, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Deve ser informado a unidade de medida para as, requisições, cotações de compras, Ordens de Compra. O sistema traz automaticamente a mesma unidade de medida do estoque, caso opte por uma diferente verificar qual é a unidade correta para Ordem de compras dentro da unidades que estejam com as devidas conversões corretas para esse produto."
                                    FieldPesquisa="ID" TableView="vwUnidadeMedida" NameWindowCadastro="WinUnidadeMedida">
                                    <Components:CustomPesquisa.Items>
                                        <System:String>xSiglaPadrao</System:String>
                                        <System:String>xUnidadeMedida</System:String>
                                    </Components:CustomPesquisa.Items>
                                </Components:CustomPesquisa>
                                <Components:CustomCheckBox
                                    Grid.Column="2" Grid.Row="6"
                                    IsChecked="{Binding currentModel.stFornecedorHomologado, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Informar se para esse produto é exigido fornecedores homologados, se sim o sistema ativará a aba para lançamentos dos fornecedores homologado.">
                                </Components:CustomCheckBox>

                            </Grid>
                        </Expander>
                        <Expander Header="Lead Time" Style="{StaticResource ExpanderPadrao}" IsExpanded="True" Grid.Row="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="100" MinWidth="100"></ColumnDefinition>
                                    <ColumnDefinition MaxWidth="150" MinWidth="150"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                </Grid.RowDefinitions>

                                <!--Label-->

                                <Components:CustomTextBlock Text="Cotação" Grid.Column="1" Grid.Row="1"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Pedido" Grid.Column="1" Grid.Row="2"></Components:CustomTextBlock>
                                <Components:CustomTextBlock Text="Recebimento" Grid.Column="1" Grid.Row="3"></Components:CustomTextBlock>

                                <!--Components-->

                                <Components:HlpDatePicker
                                    Grid.Column="2" Grid.Row="1" Height="20" Margin="0,0,0,3" stFormatoDtPicker="time"
                                    xTextDate="{Binding currentModel.dleadTimeCotacao, Mode=TwoWay, Converter={StaticResource timeSpanConverter},
                                    NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Informar em horas o lead time para cotação de compra, essa condição vai servir junto com o lead time de pedido e recebimento saber o quanto de tempo que leva para se comprar um produto e o mesmo chegar na empresa com isso é possível saber o estoque mínimo ou critico.">
                                </Components:HlpDatePicker>
                                <Components:HlpDatePicker
                                    Grid.Column="2" Grid.Row="2" Height="20" Margin="0,0,0,3" stFormatoDtPicker="time"
                                    xTextDate="{Binding currentModel.dleadTimePedido, Mode=TwoWay, Converter={StaticResource timeSpanConverter},
                                    NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Informar em horas o lead time para o pedido de compra, essa condição vai servir junto com o lead time de cotação e recebimento saber o quanto de tempo que leva para se comprar um produto e o mesmo chegar na empresa com isso é possível saber o estoque mínimo ou critico.">
                                </Components:HlpDatePicker>
                                <Components:HlpDatePicker
                                    Grid.Column="2" Grid.Row="3" Height="20" Margin="0,0,0,3" stFormatoDtPicker="time"
                                    xTextDate="{Binding currentModel.dleadTimeRecebimento, Mode=TwoWay, Converter={StaticResource timeSpanConverter},
                                    NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
									IsEnabled="{Binding bIsEnabled}"
									ToolTip="Informar em horas o lead time para recebimento da compra, essa condição vai servir junto com o lead time de cotação e pedido saber o quanto de tempo que leva para se comprar um produto e o mesmo chegar na empresa com isso é possível saber o estoque mínimo ou critico.">
                                </Components:HlpDatePicker>

                            </Grid>
                        </Expander>
                    </Grid>
                </AdornerDecorator>
            </TabItem>
            <TabItem Header="Dados de Produção">
                <AdornerDecorator>
                    <Expander Header="Configuração" Style="{StaticResource ExpanderPadrao}" IsExpanded="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"></ColumnDefinition>
                                <ColumnDefinition MaxWidth="220" MinWidth="220"></ColumnDefinition>
                                <ColumnDefinition MaxWidth="100" MinWidth="100"></ColumnDefinition>
                                <ColumnDefinition MaxWidth="175" MinWidth="175"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"></RowDefinition>
                                <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                            </Grid.RowDefinitions>
                            <!--Label-->

                            <Components:CustomTextBlock Text="Valor do custo de Transformação" Grid.Column="1" Grid.Row="1"></Components:CustomTextBlock>
                            <Components:CustomTextBlock Text="Perda/Sucata Constante" Grid.Column="1" Grid.Row="2"></Components:CustomTextBlock>
                            <Components:CustomTextBlock Text="Perda/Sucata Variável" Grid.Column="1" Grid.Row="3"></Components:CustomTextBlock>
                            <Components:CustomTextBlock Text="Unidade de Medida" Grid.Column="1" Grid.Row="4"></Components:CustomTextBlock>

                            <!--Components-->

                            <Components:CustomTextBox
                                Grid.Column="2" Grid.Row="1"
                                Text="{Binding currentModel.vProducao, Mode=TwoWay, Converter={StaticResource moedaConverter},
                                NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
							    IsEnabled="{Binding bIsEnabled}"
							    ToolTip="O Magníficus informará automaticamente o valor de aquisição do produto, baseado sempre no valor de custo do produto, quando o produto é por composição o Magníficus irá calcular o custo em cima de todos os materiais e processos relacionado a esse produto.">
                            </Components:CustomTextBox>
                            <Components:CustomTextBox
                                Grid.Column="2" Grid.Row="2"
                                Text="{Binding currentModel.pPerdaConstante, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
							    IsEnabled="{Binding bIsEnabled}"
							    ToolTip="Insira um valor de perda ou sucata produzida constantemente. A perda ou sucata é calculada na unidade especificada na unidade de medida da ordem de produção (BOM) por exemplo,">
                            </Components:CustomTextBox>
                            <Components:CustomTextBox
                                Grid.Column="2" Grid.Row="3"
                                Text="{Binding currentModel.pPerdaVariavel, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
							    IsEnabled="{Binding bIsEnabled}"
							    ToolTip="Este valor é usado como padrão quando o item é inserido em BOMs, um valor percentual de perda ou sucata produzida variavelmente. A perda ou sucata é calculada na unidade especificada na unidade de medida da ordem de produção (BOM) por exemplo,">
                            </Components:CustomTextBox>
                            <Components:CustomPesquisa 
							Grid.Column="2" Grid.Row="4" Height="20" Margin="0,0,0,3" Grid.ColumnSpan="2"
							xIdPesquisa="{Binding currentModel.idUnidadeMedidaProducao, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
							IsEnabled="{Binding bIsEnabled}"
							ToolTip="Deve ser informado a unidade de medida para as, requisições, cotações de compras, Ordens de Compra. O sistema traz automaticamente a mesma unidade de medida do estoque, caso opte por uma diferente verificar qual é a unidade correta para Ordem de compras dentro da unidades que estejam com as devidas conversões corretas para esse produto."
                                FieldPesquisa="ID" TableView="vwUnidadeMedida" NameWindowCadastro="WinUnidadeMedida">
                                <Components:CustomPesquisa.Items>
                                    <System:String>xSiglaPadrao</System:String>
                                    <System:String>xUnidadeMedida</System:String>
                                </Components:CustomPesquisa.Items>
                            </Components:CustomPesquisa>

                        </Grid>
                    </Expander>
                </AdornerDecorator>
            </TabItem>
            <TabItem Header="Fornecedores">
                <AdornerDecorator>
                    <DataGrid
                        IsReadOnly="{Binding bIsEnabled, Converter={StaticResource notConverter}}"
                        ItemsSource="{Binding currentModel.lProduto_Fornecedor_Homologado}"
                        AutoGenerateColumns="False" 
                        SelectionUnit="CellOrRowHeader" CanUserReorderColumns="False"
                        CanUserDeleteRows="True"
                        CanUserAddRows="True">
                        <DataGrid.Columns>
                            <DataGridComboBoxColumn ClipboardContentBinding="{x:Null}" Header="Fornecedor" SelectedValueBinding="{x:Null}" SelectedItemBinding="{x:Null}" TextBinding="{x:Null}" Width="*"/>
                            <DataGridTextColumn 
								ElementStyle="{StaticResource CellErrorStyle}"
								Binding="{Binding Path=nLeadTimeEntrega, UpdateSourceTrigger=LostFocus,NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
								Header="Lead time entrega" Width="250"/>
                            <DataGridTextColumn 
								ElementStyle="{StaticResource CellErrorStyle}"
								Binding="{Binding Path=nLoteMinimoCompra, UpdateSourceTrigger=LostFocus,NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
								Header="Lote minimo Compra" Width="250"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </AdornerDecorator>
            </TabItem>
            <TabItem Header="Log de Revisão">
                <AdornerDecorator>
                    <DataGrid
						IsReadOnly="{Binding bIsEnabled, Converter={StaticResource notConverter}}"
                        AutoGenerateColumns="False" 
                        ItemsSource="{Binding currentModel.lProduto_Revisao}"
                        SelectionUnit="CellOrRowHeader" CanUserReorderColumns="False"
                        CanUserDeleteRows="True"
                        CanUserAddRows="True">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn x:Name="clDtHrInicialRevisao" Header="Data/Hora inicial da Revisão" Width="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=dInicial}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <Grid FocusManager.FocusedElement="{Binding ElementName= dateScheduledPicker}" >
                                            <DatePicker x:Name="dateScheduledPicker" SelectedDate="{Binding Path=dInicial, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,
                                                ValidatesOnExceptions=true, NotifyOnValidationError=true}" />
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn x:Name="clUsuarios" Header="Usuário" Width="150" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=idFuncionario, Converter={StaticResource cbxDisplayConv}, ConverterParameter={StaticResource lResultUsuarios}}"
                                                   />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <Grid FocusManager.FocusedElement="{Binding ElementName= cbxStUsuario}" >
                                            <ComboBox x:Name="cbxStUsuario"
                ItemsSource="{Binding Source={StaticResource lResultUsuarios}}"
                                            SelectedValuePath="id"
                                            DisplayMemberPath="display"                      
            SelectedValue="{Binding idFuncionario,
                                UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                                                      IsSynchronizedWithCurrentItem="False"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn 
								ElementStyle="{StaticResource CellErrorStyle}"
								Binding="{Binding Path=xRevisao, UpdateSourceTrigger=LostFocus,NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
								Header="Descrição da Revisão" Width="250"/>
                            <DataGridTemplateColumn x:Name="clDtHrFinal" Header="Data/Hora final da Revisão" Width="*"
                                                    >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Path=dFinal}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <Grid FocusManager.FocusedElement="{Binding ElementName= dateScheduledPicker}" >
                                            <DatePicker x:Name="dateScheduledPicker" 
                                                        SelectedDate="{Binding Path=dFinal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged,
                                                ValidatesOnExceptions=true, NotifyOnValidationError=true}" />
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </AdornerDecorator>
            </TabItem>
        </TabControl>
    </Grid>
</runtime:WindowsBase>
