<runtime:WindowsBase
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:runtime="clr-namespace:HLP.Comum.View.Formularios;assembly=HLP.Comum.View"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:enums="clr-namespace:HLP.Comum.Resources.RecursosBases;assembly=HLP.Comum.Resources"
        xmlns:convert="clr-namespace:HLP.Comum.View.Converters;assembly=HLP.Comum.View"
        xmlns:convLocal="clr-namespace:HLP.Entries.View.WPF.RecursosHumanos.Converter"
        xmlns:Components="clr-namespace:HLP.Comum.View.Components;assembly=HLP.Comum.View" 
		xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:src="clr-namespace:HLP.Entries.ViewModel.ViewModels;assembly=HLP.Entries.ViewModel"
        xmlns:ccx="clr-namespace:HLP.Comum.ViewModel.ViewModels.Components;assembly=HLP.Comum.ViewModel"
		x:Class="HLP.Entries.View.WPF.RecursosHumanos.WinFuncionario"
        Title="Funcionários" Height="664" Width="1224" NameView="vwFuncionario">
    <runtime:WindowsBase.Resources>
        <convLocal:TabItemRepresentantesVisibilityConverter x:Key="tabItemRepresentanteVisibilityConv"></convLocal:TabItemRepresentantesVisibilityConverter>
        <convert:MoedaConverter x:Key="moedaConverter"></convert:MoedaConverter>
        <convert:TimeSpanToString x:Key="timeSpanConverter"/>
        <convert:NotConverter x:Key="notConverter"/>
        <convert:MaskConverter x:Key="maskConverter"/>
        <convert:OperacoesAritmetConverter x:Key="operacoesAritmetConverter"/>
        <convert:PorcentagemConverter x:Key="porcentagemConverter"/>
        <convert:ComboBoxDisplayConverter x:Key="cbxDisplayConv"/>
        <ObjectDataProvider
            MethodName="GetDict"
            ObjectType="{x:Type convert:EnumDescriptionConverter}"
            x:Key="EnumDescriptionDict">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:TipoEndereco"></x:Type>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider
            MethodName="GetDict"
            ObjectType="{x:Type convert:EnumDescriptionConverter}"
            x:Key="EnumDescriptionDictCertif">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:TipoCertificacao"></x:Type>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="odp" ObjectType="{x:Type ccx:FillComboBoxViewModel}"/>
        <ObjectDataProvider x:Key="lresultProdutos" ObjectInstance="{StaticResource odp}" MethodName="GetAllValuesToComboBox">
            <ObjectDataProvider.MethodParameters>
                <System:String>vwProdutoToComboBox</System:String>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="lresultCidades" ObjectInstance="{StaticResource odp}" MethodName="GetAllValuesToComboBox">
            <ObjectDataProvider.MethodParameters>
                <System:String>vwCidadeToComboBox</System:String>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </runtime:WindowsBase.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="601*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto" MinHeight="400" Grid.Row="1">
            <ItemsControl ItemsSource="{Binding SelectedUserControls}"/>
        </ScrollViewer>
        <TabControl>
            <TabItem Header="Geral">
                <AdornerDecorator Margin="0,3,0,-3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MaxWidth="550" MinWidth="550"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Expander Grid.Column="0" Grid.Row="0"  IsExpanded="True" Header="Identificação" Style="{StaticResource ExpanderPadrao}">
                                <AdornerDecorator>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="120"></ColumnDefinition>
                                            <ColumnDefinition Width="45*" MaxWidth="90" MinWidth="90"></ColumnDefinition>
                                            <ColumnDefinition Width="30*" MaxWidth="60" MinWidth="60"></ColumnDefinition>
                                            <ColumnDefinition Width="50*" MaxWidth="100" MinWidth="100"/>
                                            <ColumnDefinition Width="29*" MaxWidth="60" MinWidth="60"/>
                                            <ColumnDefinition Width="80*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="Auto" MaxHeight="30"/>
                                            <RowDefinition Height="Auto" MaxHeight="30"/>
                                            <RowDefinition Height="Auto" MaxHeight="30"/>
                                            <RowDefinition Height="Auto" MaxHeight="30"/>
                                            <RowDefinition Height="Auto" MaxHeight="30"/>
                                            <RowDefinition Height="Auto" MaxHeight="30"/>
                                            <RowDefinition Height="Auto" MaxHeight="30"/>
                                            <RowDefinition Height="Auto" MaxHeight="150"/>
                                            <RowDefinition Height="Auto" MaxHeight="30"/>
                                        </Grid.RowDefinitions>

                                        <!--Label Components-->

                                        <Components:CustomTextBlock Grid.Column="1" Grid.Row="1" Text="Código" VerticalAlignment="Center" Height="18" Margin="0,6"></Components:CustomTextBlock>
                                        <Components:CustomTextBlock Grid.Column="1" Grid.Row="2" Text="Código Alternativo" VerticalAlignment="Center" Height="18" Margin="0,6"></Components:CustomTextBlock>
                                        <Components:CustomTextBlock Grid.Column="1" Grid.Row="3" Text="Ativo?" VerticalAlignment="Center" Height="18" Margin="0,6"></Components:CustomTextBlock>
                                        <Components:CustomTextBlock Grid.Column="1" Grid.Row="4" Text="Saudação" VerticalAlignment="Center" Height="18" Margin="0,5"></Components:CustomTextBlock>
                                        <Components:CustomTextBlock Grid.Column="1" Grid.Row="5" Text="Nome" VerticalAlignment="Center" Height="18" Margin="0,5"></Components:CustomTextBlock>
                                        <Components:CustomTextBlock Grid.Column="1" Grid.Row="6" Text="Cargo" VerticalAlignment="Center" Height="18" Margin="0,5"></Components:CustomTextBlock>
                                        <Components:CustomTextBlock Grid.Column="1" Grid.Row="7" Text="Departamento" VerticalAlignment="Center" Height="18" Margin="0,5"></Components:CustomTextBlock>


                                        <!--Components-->

                                        <Components:CustomTextBox
                                Grid.Column="2" Grid.Row="1" Height="27" Margin="0,0,0,3"
                                Text="{Binding currentModel.idFuncionario, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsReadOnly="True"
								ToolTip="Chave principal do registro do Funcionário">
                                        </Components:CustomTextBox>
                                        <Components:CustomTextBox
                                Grid.Column="2" Grid.Row="2" Height="27" Margin="0,0,0,3"
                                Text="{Binding currentModel.xCodigoAlternativo, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
								ToolTip="Digite um código alternativo para o Funcionário">
                                        </Components:CustomTextBox>
                                        <Components:CustomCheckBox
                                Grid.Column="2" Grid.Row="3" VerticalAlignment="Center"
                                IsChecked="{Binding currentModel.Ativo, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
								ToolTip="Informe o status do funcionário, se ele está ativo ou não para a empresa">
                                        </Components:CustomCheckBox>
                                        <Components:CustomTextBox
                                Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="3" Height="27" Margin="0,0,0,3"
                                Text="{Binding currentModel.xSaudacao, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
								ToolTip="Especifique a forma de saudação preferencial de um funcionário">
                                        </Components:CustomTextBox>
                                        <Components:CustomTextBox
                                Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="3" Height="27" Margin="0,0,0,3"
                                Text="{Binding currentModel.xNome, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
								ToolTip="Informe o nome do funcionário">
                                        </Components:CustomTextBox>
                                        <Components:HlpPesquisa
                                Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="3" Height="27" Margin="0,0,0,3"
                                nameWindow="WinCargo"
								Text="{Binding currentModel.idCargo, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
							    Field="idCargo" ToolTip="Informe o Cargo do funcionário" Table="Cargo" WidthLabel="0" TableView="vwCargo" FieldPesquisa="ID">
                                            <Components:HlpPesquisa.Items>
                                                <System:String>xCargo</System:String>
                                                <System:String>xDescricao</System:String>
                                            </Components:HlpPesquisa.Items>
                                        </Components:HlpPesquisa>
                                        <Components:HlpPesquisa
                                Grid.Column="2" Grid.Row="7" Grid.ColumnSpan="3" Height="27" Margin="0,0,0,3"
								nameWindow="WinDepartamento"
								Text="{Binding currentModel.idDepartamento, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
								Field="idDepartamento" ToolTip="Informar o Departamento do funcionário" Table="Departamento" WidthLabel="0" FieldPesquisa="ID" TableView="vwDepartamento">
                                            <Components:HlpPesquisa.Items>
                                                <System:String>xDepartamento</System:String>
                                                <System:String>xDescricao</System:String>
                                                <System:String>xSetor</System:String>
                                            </Components:HlpPesquisa.Items>
                                        </Components:HlpPesquisa>
                                        <Components:HlpUserControlBtnImage  Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="8" Margin="0,0,0,3"
                                        IsEnabled="{Binding bIsEnabled}"
                                        byteImage="{Binding currentModel.imgFoto, Mode=TwoWay}">
                                        </Components:HlpUserControlBtnImage>
                                    </Grid>
                                </AdornerDecorator>
                            </Expander>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" MaxHeight="120"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Expander IsExpanded="True" Header="Administração" Style="{StaticResource ExpanderPadrao}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="10"></ColumnDefinition>
                                        <ColumnDefinition Width="75*" MaxWidth="150" MinWidth="150"></ColumnDefinition>
                                        <ColumnDefinition Width="75*" MaxWidth="150" MinWidth="100"></ColumnDefinition>
                                        <ColumnDefinition Width="75*" MaxWidth="150" MinWidth="100"/>
                                        <ColumnDefinition Width="58*"/>
                                        <ColumnDefinition Width="11*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="10"></RowDefinition>
                                        <RowDefinition Height="Auto" MaxHeight="30"></RowDefinition>
                                        <RowDefinition Height="Auto" MaxHeight="30"></RowDefinition>
                                        <RowDefinition Height="Auto" MaxHeight="30"></RowDefinition>

                                    </Grid.RowDefinitions>

                                    <!--Label Componentes-->


                                    <Components:CustomTextBlock VerticalAlignment="Center" Height="18" Text="Perfil do Funcionário" Grid.Column="1" Grid.Row="1" Margin="1,5,148,5" Grid.ColumnSpan="2"/>
                                    <Components:CustomTextBlock VerticalAlignment="Center" Height="18" Text="Site Padrão" Grid.Column="1" Grid.Row="2" Margin="1,5,148,5" Grid.ColumnSpan="2"/>

                                    <!--Components-->

                                    <Components:CustomComboBox
                                Grid.Column="2" Grid.Row="1" Margin="0,0,0,3"
                                x:Name="cbxStPerfil"
								SelectedIndex="{Binding currentModel.stPerfil, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
								ToolTip="Informe o tipo de perfil do funcionário sendo:0-Centro de Trabalho, 1-Funcionário, 2-Prestador de Serviços, 3-Representante">
                                        <Components:CustomComboBox.Items>
                                            <System:String>0-Centro de Trabalho</System:String>
                                            <System:String>1-Funcionário</System:String>
                                            <System:String>2-Prestador de Serviços</System:String>
                                            <System:String>3-Representante</System:String>
                                        </Components:CustomComboBox.Items>
                                    </Components:CustomComboBox>
                                    <Components:HlpPesquisa
                                Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2" Height="27" Margin="0,0,0,3"
								nameWindow="WinCalendario"
								Text="{Binding currentModel.idCalendario, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
								ToolTip="Informe um tipo de Calendário para o funcionário." Table="Calendario" WidthLabel="0" FieldPesquisa="ID" TableView="vwCalendario">
                                        <Components:HlpPesquisa.Items>
                                            <System:String>xNome</System:String>
                                            <System:String>xDescricao</System:String>
                                        </Components:HlpPesquisa.Items>
                                    </Components:HlpPesquisa>
                                </Grid>
                            </Expander>
                            <Expander Grid.Row="1" IsExpanded="True" Header="Requisição de Compras" Style="{StaticResource ExpanderPadrao}">
                                <Grid Grid.Column="1" Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="80*" MaxWidth="170" MinWidth="170"></ColumnDefinition>
                                        <ColumnDefinition Width="75*" MaxWidth="150"></ColumnDefinition>
                                        <ColumnDefinition Width="58*" MaxWidth="100" MinWidth="50"/>
                                        <ColumnDefinition Width="81*" MaxWidth="100" MinWidth="50"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="10"></RowDefinition>
                                        <RowDefinition Height="Auto" MaxHeight="30"></RowDefinition>
                                        <RowDefinition Height="Auto" MaxHeight="30"></RowDefinition>
                                        <RowDefinition Height="Auto" MaxHeight="30"></RowDefinition>
                                        <RowDefinition Height="Auto" MaxHeight="30"></RowDefinition>

                                    </Grid.RowDefinitions>

                                    <!--Label Components-->

                                    <Components:CustomTextBlock Grid.Column="1" Grid.Row="1" Text="Site Padrão" VerticalAlignment="Center" Height="18" Margin="0,5"></Components:CustomTextBlock>
                                    <Components:CustomTextBlock Grid.Column="1" Grid.Row="2" Text="Depósito Padrão" VerticalAlignment="Center" Height="18" Margin="0,5"></Components:CustomTextBlock>
                                    <Components:CustomTextBlock Grid.Column="1" Grid.Row="3" Text="Informações de Atenção" VerticalAlignment="Center" Height="18" Margin="0,5"></Components:CustomTextBlock>

                                    <!--Components-->

                                    <Components:HlpPesquisa
                                Grid.Column="2" Grid.Row="1" Height="27" Margin="0,0,0,3"
								nameWindow="WinSite"
								Text="{Binding currentModel.idSite, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
								ToolTip="Selecione um site. Quando um funcionário criar uma requisição de compra, o site será automaticamente transferido para o cabeçalho e para as linhas da requisição de compra." Table="Site" WidthLabel="0" FieldPesquisa="ID" TableView="vwSite" Grid.ColumnSpan="2">
                                        <Components:HlpPesquisa.Items>
                                            <System:String>xSite</System:String>
                                            <System:String>xDescricao</System:String>
                                        </Components:HlpPesquisa.Items>
                                    </Components:HlpPesquisa>
                                    <Components:HlpPesquisa
                                Grid.Column="2" Grid.Row="2" Height="27" Margin="0,0,0,3"
								nameWindow="WinDeposito"
								Text="{Binding currentModel.idDeposito, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
								ToolTip="Selecione um depósito. Quando um funcionário criar uma requisição de compra, o depósito será automaticamente transferido para o cabeçalho e para as linhas da requisição de compra" Table="Deposito" WidthLabel="0" FieldPesquisa="ID" TableView="vwDeposito" Grid.ColumnSpan="2">
                                        <Components:HlpPesquisa.Items>
                                            <System:String>xDeposito</System:String>
                                            <System:String>xDescricao</System:String>
                                        </Components:HlpPesquisa.Items>
                                    </Components:HlpPesquisa>
                                    <Components:CustomTextBox
                                Grid.Column="2" Grid.Row="3" Height="27" Margin="0,0,0,3"
                                Text="{Binding currentModel.xInformacaoAtencao, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
								ToolTip="Insira informações sobre endereço de entrega adicional para um funcionário como, por exemplo, localização do escritório. As informações de atenção são automaticamente transferidas para o cabeçalho e para as linhas da requisição de compra" Grid.ColumnSpan="3">
                                    </Components:CustomTextBox>
                                </Grid>
                            </Expander>
                        </Grid>
                    </Grid>
                </AdornerDecorator>
            </TabItem>
            <TabItem Header="Endereços">
                <Grid>
                    <Components:HlpEndereco 
                        ItemsSource="{Binding currentModel.lFuncionario_Endereco}" 
                        IsReadOnly="{Binding bIsEnabled, Converter={StaticResource notConverter}}"
                        IsEnabled="{Binding bIsEnabled}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Informações">
                <AdornerDecorator>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Expander IsExpanded="True" Header="Pessoais" Style="{StaticResource ExpanderPadrao}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="10"></ColumnDefinition>
                                        <ColumnDefinition Width="75*" MaxWidth="150" MinWidth="150"></ColumnDefinition>
                                        <ColumnDefinition Width="60*" MaxWidth="170"></ColumnDefinition>
                                        <ColumnDefinition Width="50*" MaxWidth="100" MinWidth="100"/>
                                        <ColumnDefinition Width="37*" MaxWidth="60" MinWidth="10"/>
                                        <ColumnDefinition Width="71*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="10"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <!--LabelComponents-->

                                    <Components:CustomTextBlock Height="18" Text="Data de Aniversário" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="0,5,0,4"></Components:CustomTextBlock>
                                    <Components:CustomTextBlock Height="18" Text="Sexo" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Margin="0,5,0,4"></Components:CustomTextBlock>
                                    <Components:CustomTextBlock Height="18" Text="Data de Falecimento" VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" Margin="0,5,0,4"></Components:CustomTextBlock>
                                    <Components:CustomTextBlock Height="18" Text="CPF" VerticalAlignment="Center" Grid.Column="1" Grid.Row="4" Margin="0,5,0,4"></Components:CustomTextBlock>
                                    <Components:CustomTextBlock Height="18" Text="RG" VerticalAlignment="Center" Grid.Column="1" Grid.Row="5" Margin="0,5,0,4"></Components:CustomTextBlock>
                                    <Components:CustomTextBlock Height="18" Text="Conjugue" VerticalAlignment="Center" Grid.Column="1" Grid.Row="6" Margin="0,5,0,4"></Components:CustomTextBlock>
                                    <Components:CustomTextBlock Height="18" Text="Filhos" VerticalAlignment="Center" Grid.Column="1" Grid.Row="7" Margin="0,5,0,4"></Components:CustomTextBlock>
                                    <Components:CustomTextBlock Height="18" Text="Conta Bancária" VerticalAlignment="Center" Grid.Column="1" Grid.Row="8" Margin="0,5,0,4"></Components:CustomTextBlock>
                                    <Components:CustomTextBlock Height="18" Text="Estado Civil" VerticalAlignment="Center" Grid.Column="1" Grid.Row="9" Margin="0,5,0,4"></Components:CustomTextBlock>

                                    <!--Components-->

                                    <Components:HlpDatePicker Grid.Column="2" Grid.Row="1" Height="27" Margin="0,0,0,3"
                                        xTextDate="{Binding currentModel.dAniversario, Mode=TwoWay,
                                        Converter={StaticResource maskConverter}, ConverterParameter=date,
                                        NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"									    
									    IsEnabled="{Binding bIsEnabled}"
                                        stFormatoDtPicker="date"
                                        ToolTip="Informe a data de aniversário do funcionário.">
                                    </Components:HlpDatePicker>
                                    <Components:CustomComboBox
                                        Grid.Column="2" Grid.Row="2" Height="27" Margin="0,0,0,3"
                                        SelectedIndex="{Binding currentModel.stSexo, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
									    IsEnabled="{Binding bIsEnabled}"
									    ToolTip="Informe o sexo do funcionário">
                                        <Components:CustomComboBox.Items>
                                            <System:String>0-MASCULINO</System:String>
                                            <System:String>1-FEMININO</System:String>
                                        </Components:CustomComboBox.Items>
                                    </Components:CustomComboBox>
                                    <Components:HlpDatePicker
                                        Grid.Column="2" Grid.Row="3" Height="27" Margin="0,0,0,3"
                                        xTextDate="{Binding currentModel.dFalecimento, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
									    IsEnabled="{Binding bIsEnabled}"
                                        stFormatoDtPicker="date"
									    ToolTip="Informe a data de falecimento do funcionário.">
                                    </Components:HlpDatePicker>
                                    <Components:CustomTextBox
                                        Grid.Column="2" Grid.Row="4" Height="27" Margin="0,0,0,3"
                                        Text="{Binding currentModel.xCpf, Mode=TwoWay, Converter={StaticResource maskConverter}, ConverterParameter=cpf,
                                        NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									    IsEnabled="{Binding bIsEnabled}"
									    ToolTip="Informar o Cadastro de Pessoa Física do funcionário">
                                    </Components:CustomTextBox>
                                    <Components:CustomTextBox
                                        Grid.Column="2" Grid.Row="5" Height="27" Margin="0,0,0,3"
                                        Text="{Binding currentModel.xRg, Mode=TwoWay, Converter={StaticResource maskConverter}, ConverterParameter=rg,
                                        NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									    IsEnabled="{Binding bIsEnabled}" 
									    ToolTip="Informar o Registro Geral do funcionário">
                                    </Components:CustomTextBox>
                                    <Components:CustomTextBox
                                        Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="3" Height="27" Margin="0,0,0,3"
                                        Text="{Binding currentModel.xConjugue, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									    IsEnabled="{Binding bIsEnabled}" 
									    ToolTip="Informar o nome do Conjugue do funcionário, quando houver">
                                    </Components:CustomTextBox>
                                    <Components:CustomTextBox
                                        Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="3" Height="27" Margin="0,0,0,3"
                                        Text="{Binding currentModel.xFilhos, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									    IsEnabled="{Binding bIsEnabled}"
									    ToolTip="Informar o nome dos filhos do funcionário, quando houver.">
                                    </Components:CustomTextBox>
                                    <Components:HlpPesquisa
                                        Grid.Column="2" Grid.Row="8" Grid.ColumnSpan="3" Height="27" Margin="0,0,0,3"
									    nameWindow="WinContaBancaria"
									    Text="{Binding currentModel.idContaBancaria, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
									    IsEnabled="{Binding bIsEnabled}"
									    ToolTip="Informar a conta bancária do funcionário para eventual pagamento ou recebidos."
                                        Table="Funcionario" WidthLabel="0" FieldPesquisa="ID" TableView="vwContaBancaria">
                                        <Components:HlpPesquisa.Items>
                                            <System:String>xNumeroConta</System:String>
                                            <System:String>Agencia</System:String>
                                            <System:String>Banco</System:String>
                                            <System:String>stConta</System:String>
                                        </Components:HlpPesquisa.Items>
                                    </Components:HlpPesquisa>
                                    <Components:CustomComboBox 
                                        Grid.Column="2" Grid.Row="9" Height="27" Margin="0,0,0,3"
                                        IsEnabled="{Binding bIsEnabled}"
                                        SelectedIndex="{Binding currentModel.stEstadoCivil}"
                                        ToolTip="Informar o Estado Civil para o Funcionário. 0 - Solteiro(a) - quem nunca se casou, ou que teve o casamento anulado 1 - Casado(a) - quem contraiu matrimônio, independente do regime de bens adotado 2 - Divorciado(a) - após a homologação do divórcio pela justiça ou por uma escritura pública. 3 - Viúvo(a) - pessoa cujo cônjuge faleceu."
                                        >
                                        <Components:CustomComboBox.Items>
