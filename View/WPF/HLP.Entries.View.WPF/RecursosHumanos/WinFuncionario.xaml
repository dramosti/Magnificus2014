                                <Components:CustomTextBox Grid.Column="2" Grid.Row="3" Height="27" Margin="0,0,0,3"
                                    Text="{Binding currentModel.xRadioFoneResidencial, Mode=TwoWay, Converter={StaticResource maskConverter}, ConverterParameter=tel,
