                                <Components:CustomTextBox Grid.Column="2" Grid.Row="1" Height="27" Margin="0,0,0,3"
                                    Text="{Binding currentModel.xTelefoneResidencial, Mode=TwoWay, Converter={StaticResource maskConverter}, ConverterParameter=tel,
