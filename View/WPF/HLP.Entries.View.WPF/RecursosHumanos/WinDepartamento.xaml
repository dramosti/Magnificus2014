<runtime:WindowsBase
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:runtime="clr-namespace:HLP.Comum.View.Formularios;assembly=HLP.Comum.View"
	xmlns:Components="clr-namespace:HLP.Comum.View.Components;assembly=HLP.Comum.View"
	x:Class="HLP.Entries.View.WPF.RecursosHumanos.WinDepartamento"
	x:Name="Window"
	Title="Departamento"
	NameView="vwDepartamento"
	Width="640" Height="480">
    <StackPanel HorizontalAlignment="Left" Height="214" Margin="2,1,0,0" VerticalAlignment="Top" Width="628">
        <Components:HlpTextBox 
			Validation.ErrorTemplate="{StaticResource exceptionComp}" 
			IsEnabled="{Binding bIsEnabled}" 
			Text="{Binding currentModel.idDepertamento, Mode=TwoWay, UpdateSourceTrigger=LostFocus,ValidatesOnDataErrors=True, NotifyOnValidationError=True}"		
			Caption="Código" 
			Field="idDepartamento" 
			Table="Departamento" 
			Help="Chave principal do registro departamento"
		    WidthLabel="110" Height="30" Margin="20,20,359,10" />
        <Components:HlpTextBox
        	Validation.ErrorTemplate="{StaticResource exceptionComp}" 
        	IsEnabled="{Binding bIsEnabled}" 
        	Text="{Binding currentModel.xDepartamento, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
        	Height="30" Margin="20,0,223,10" Caption="Departamento" Field="xDepartamento" Help="Informe um departamento de forma reduzida" Table="idDepartamento" WidthLabel="110"/>
        <Components:HlpTextBox
			Validation.ErrorTemplate="{StaticResource exceptionComp}" 
			IsEnabled="{Binding bIsEnabled}" 
			Text="{Binding currentModel.xDescrição, Mode=TwoWay, UpdateSourceTrigger=LostFocus,ValidatesOnDataErrors=True, NotifyOnValidationError=True}" 
			Height="30" Margin="20,0,23,10" Caption="Descrição" Field="xDescrição" Help="Descrição do Departamento" Table="Departamento" WidthLabel="110"/>
        <Components:HlpTextBox
			Validation.ErrorTemplate="{StaticResource exceptionComp}" 
			IsEnabled="{Binding bIsEnabled}" 
			Text="{Binding currentModel.idSetor, Mode=TwoWay, UpdateSourceTrigger=LostFocus,ValidatesOnDataErrors=True, NotifyOnValidationError=True}"			
			Height="30" Margin="20,0,23,10" Caption="Setor" Field="idSetor" Help="Selecione um setor da empresa já cadastrado, mais detalhes no formulário de Setor." Table="Departamento" WidthLabel="110"/>
        <Components:HlpTextBox 
			Text="{Binding currentModel.xEmail, Mode=TwoWay}"
			Height="30" Margin="20,0,23,0" Caption="E-mail" Field="xEmail" Help="Informar o e-mail padrão para o Departamento, caso haja." Table="Departamento" WidthLabel="110"/>
    </StackPanel>
</runtime:WindowsBase>