<runtime:WindowsBase 
        xmlns:runtime="clr-namespace:HLP.Components.View.WPF;assembly=HLP.Components.View.WPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:HLP.Components.View.WPF.Converter;assembly=HLP.Components.View.WPF"
        xmlns:Components="clr-namespace:HLP.Components.View.WPF;assembly=HLP.Components.View.WPF"
		xmlns:System="clr-namespace:System;assembly=mscorlib" 
        x:Class="HLP.Entries.View.WPF.Parametrização.WinParametrizacao"
        Title="Parâmetros" Height="650" Width="1200">
    <runtime:WindowsBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HLP.Resources.View.WPF;component/Styles/Components/UserControlStyles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <conv:PorcentagemConverter x:Key="porcentagemConverter"/>
            <conv:MoedaConverter x:Key="MoedaConverter"/>
        </ResourceDictionary>        
    </runtime:WindowsBase.Resources>
    <DockPanel LastChildFill="True" >
        <TabControl  VerticalAlignment="Stretch" Margin="0,10,0,0">
            <TabItem Header="Estoque">
                <AdornerDecorator Margin="0,-4,0,4">
                    <DockPanel LastChildFill="True">
                        <Expander Header="Parâmetros de Estoque" IsExpanded="True" Style="{StaticResource ExpanderPadrao}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"></ColumnDefinition>
                                    <ColumnDefinition Width="280" MinWidth="280" MaxWidth="280"></ColumnDefinition>
                                    <ColumnDefinition Width="175*" MaxWidth="200" MinWidth="100"></ColumnDefinition>
                                    <ColumnDefinition Width="145*"></ColumnDefinition>
                                    <ColumnDefinition Width="704*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                </Grid.RowDefinitions>
                                
                                <!--Label-->

                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="1" Text="Tipo do estoque mínimo" Height="20" Margin="0,0,0,3"/>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="2" Text="Tipo do estoque máximo" Height="20" Margin="0,0,0,3"/>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="3" Text="Tipo de média consumo" Height="20" Margin="0,0,0,3"/>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="4" Text="Vendas Gera?" VerticalAlignment="Center"/>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="5" Text="Utiliza grade nos produtos?" VerticalAlignment="Center"/>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="6" Text="Utiliza rastreabilidade dos materiais?" VerticalAlignment="Center"/>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="7" Text="Utiliza rastreabilidade dos produtos acabados?" VerticalAlignment="Center"/>
                                
                                <!--Components-->

                                <Components:CustomComboBox
                                    Grid.Column="2" Grid.Row="1" Height="20" Margin="0,0,0,3"
				    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_EstoqueModel.stEstoqueMinimo, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="Informar se o tipo de estoque mínimo será Automático ou Manual">
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-Automático</System:String>
                                        <System:String>1-Manual</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>
                                <Components:CustomComboBox
                                    Grid.Column="2" Grid.Row="2" Height="20" Margin="0,0,0,3"
                                    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_EstoqueModel.stEstoqueMaximo,
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="Informar se o tipo de estoque máximo será Automático ou Manual.">
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-Automático</System:String>
                                        <System:String>1-Manual</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>                                
                                <Components:CustomComboBox
                                    Grid.Column="2" Grid.Row="3" Height="20" Margin="0,0,0,3"
                                    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_EstoqueModel.stMediaConsumo, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="Informar ao sistema em quanto tempo será a feita de média de consumo">
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-Semanal</System:String>
                                        <System:String>1-Mensal</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>                                
                                <Components:CustomComboBox
                                    Grid.Column="2" Grid.Row="4" Height="20" Margin="0,0,0,3"
                                    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_EstoqueModel.stVendasGera, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="Quando a empresa trabalha sem estoque, quando faz o pedido de venda o sistema já gera automaticamente uma necessidade de compra para atendimento da venda.">
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-Nenhum</System:String>
                                        <System:String>1-Requisição</System:String>
                                        <System:String>2-Cotação</System:String>
                                        <System:String>3-Pedido</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>                                
                                <Components:CustomCheckBox
                                    Grid.Column="2" Grid.Row="5" Height="20" Margin="0,0,0,3" Width="40" HorizontalAlignment="Left"
                                    IsChecked="{Binding currentModel.empresaParametros.ObjParametro_EstoqueModel.stGradeEstoque
                                    , Mode=TwoWay, NotifyOnValidationError=True, 
                                    UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
                                    VerticalAlignment="Center"
								    ToolTip="Informar se o Magnificus irá trabalhar com grades, além dessa informação para que veja as opções das grades nas movimentações de vendas, compras ou movimentação, no cadastro do produto deve estar definido em qual grade ele pertence.">
                                </Components:CustomCheckBox>                                
                                <Components:CustomCheckBox
                                    Grid.Column="2" Grid.Row="6" Height="20" Margin="0,0,0,3" Width="40" HorizontalAlignment="Left"
                                    IsChecked="{Binding currentModel.empresaParametros.ObjParametro_EstoqueModel.stRastreabilidadeMaterial, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
                                    VerticalAlignment="Center"
								    ToolTip="Informar se o Magníficus irá fazer a rastreabilidade de todos os materias de consumo, compras, aquisição, etc. Menos os produtos acabados.">
                                </Components:CustomCheckBox>                                
                                <Components:CustomCheckBox 
                                    Grid.Column="2" Grid.Row="7" Height="20" Margin="0,0,0,3" HorizontalAlignment="Left" Width="40"
                                    IsChecked="{Binding currentModel.empresaParametros.ObjParametro_EstoqueModel.stRastreabilidadeProdutoAcabado, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
                                    VerticalAlignment="Center"
								    ToolTip="Informar se o Magníficus irá fazer a rastreabilidade de todos os produtos acabados inclusive a rastreabilidade dos materiais.">
                                </Components:CustomCheckBox>

                            </Grid>
                        </Expander>
                    </DockPanel>
                </AdornerDecorator>
            </TabItem>
            <TabItem Header="Custos">
                <AdornerDecorator>
                    <DockPanel LastChildFill="True">
                        <Expander Header="Parâmetros Custo" IsExpanded="True" Style="{StaticResource ExpanderPadrao}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"></ColumnDefinition>
                                    <ColumnDefinition MinWidth="400" MaxWidth="400" Width="364*"></ColumnDefinition>
                                    <ColumnDefinition Width="125*" MinWidth="125" MaxWidth="125"></ColumnDefinition>
                                    <ColumnDefinition Width="102*"></ColumnDefinition>
                                    <ColumnDefinition Width="81*"></ColumnDefinition>
                                    <ColumnDefinition Width="185*"></ColumnDefinition>
                                    <ColumnDefinition Width="317*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto" MaxHeight="23"/>
                                    <RowDefinition Height="Auto" MaxHeight="23"/>
                                    <RowDefinition Height="Auto" MaxHeight="23"/>
                                    <RowDefinition Height="Auto" MaxHeight="23"/>
                                    <RowDefinition Height="Auto" MaxHeight="23"/>
                                    <RowDefinition Height="Auto" MaxHeight="23"/>
                                    <RowDefinition Height="Auto" MaxHeight="23"/>
                                    <RowDefinition Height="Auto" MaxHeight="23"/>
                                    <RowDefinition Height="Auto" MaxHeight="23"/>
                                    <RowDefinition Height="Auto" MaxHeight="23"/>
                                    <RowDefinition Height="Auto" MaxHeight="23"/>
                                </Grid.RowDefinitions>
                                
                                <!--Label-->

                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="1" Text="Horas trabalhadas dia" />
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="2" Text="Quantidade de dias trabalhada na semana"/>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="3" Text="Qual o custo do Material na composição do produto final" />
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="4" Text="Custo baseado em?"/>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="5" Text="Tipo de Valor de Venda"/>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="6" Text="Atualiza valor de custo"/>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="7" Text="Atualiza valor de Venda pós Recebimento?"/>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="8" Text="Tipo de Custo Default?" />
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="9" Text="Custo Médio Default"/>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="10" Text="Base de calculo para o custo operacional"/>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="11" Text="Tipo de operação padrão para calculo de custo do produto/material"/>
                                
                                <!--Components-->

                                <Components:HlpDatePicker
                                    Grid.Column="2" Grid.Row="1" Height="20" Margin="0,0,0,3"
                                    xTextTime="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.xHorasTrabalhadasDia,                                     
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
                                    stFormatoDtPicker="time"
								    IsEnabled="{Binding bIsEnabled}"
							        ToolTip="de custo hora homem. ">
                                </Components:HlpDatePicker>                               
                                <Components:CustomTextBox
                                    Grid.Column="2" Grid.Row="2"
                                    Text="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.xDiasTrabalhadasSemana, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="Informar a quantidade de dias trabalhada na semana para calculo de custo.">
                                </Components:CustomTextBox>                               
                                <Components:CustomComboBox 
                                    Grid.Column="2" Grid.Row="3"
                                    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.stCustoComposicao, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="QUAL CUSTO DO MATERIAL NA COMPOSIÇÃO DO PRODUTO FINAL (1-COMPRA 2-VENDA)">
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-Compra</System:String>
                                        <System:String>1-Venda</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>                                
                                <Components:CustomComboBox 
                                    Grid.Column="2" Grid.Row="4"
                                    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.st_Markup, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="QUAL CUSTO DO MATERIAL NA COMPOSIÇÃO DO PRODUTO FINAL (1-COMPRA 2-VENDA)">
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-Preço de Compra</System:String>
                                        <System:String>1- Preço de Venda</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>                                
                                <Components:CustomComboBox
                                    Grid.Column="2"  Grid.Row="5"
                                    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.stValorVenda, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="Após calculado o custo de um produto o sistema irá por padrão assumir o preço de venda, 1- NENHUM(sem preço), 2-SUGERIDO (o calculado pelo sistema) ou3-MERCADO (é o valor de mercado informado na composição de preços)">
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-NENHUM(sem preço)</System:String>
                                        <System:String>1-SUGERIDO(o calculado pelo sistema)</System:String>
                                        <System:String>2-MERCADO(é o valor de mercado informado na composição de preços)</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>                                
                                <Components:CustomCheckBox 
                                    Grid.Column="2" Grid.Row="6"
                                    IsChecked="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.stAtualizaValorCusto, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}">                                    
                                </Components:CustomCheckBox>                                
                                <Components:CustomCheckBox
                                    Grid.Column="2" Grid.Row="7"
                                    IsChecked="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.stAtualizaValorVenda, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"                                    
								    ToolTip="Informar se o valor de venda será atualizado automaticamente pelo sistema após o recebimento, seja produto acabado ou material de venda">
                                </Components:CustomCheckBox>                                
                                <Components:CustomComboBox
                                    Grid.Column="2" Grid.Row="8"
                                    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.stCustoDefault, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="Informar qual o tipo custo Default quando é incluído um novo produto, lembrando que não é esse tipo de custo que o software se baseará ele se baseia pelo tipo de custo que esta no cadastro de produto no campo formação de custo.">
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-Custo de Composição</System:String>
                                        <System:String>1-Custo Manual</System:String>
                                        <System:String>2-Custo Automático</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>                                
                                <Components:CustomComboBox
                                    Grid.Column="2" Grid.Row="9"
                                    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.stCustoMedio, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="Informar qual o custo médio Default quando é incluído um novo produto, lembrando que não é esse tipo de custo médio que o software se baseará ele se baseia pelo que esta no cadastro de produto no campo tipo de custo.">
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-Custo Médio(Ponderado)</System:String>
                                        <System:String>1-Custo Atual</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>                                
                                <Components:CustomComboBox
                                    Grid.Column="2" Grid.Row="10"
                                    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.stCompoeBaseCalculoCustoOperacional, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="1- VALOR DE CUSTO DO MATERIAL(DEFAULT)"    >
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-Nenhum</System:String>
                                        <System:String>1-VALOR DE CUSTO DO MATERIAL(DEFAULT)</System:String>
                                        <System:String>2-VALOR DE CUSTO DO MATERIAL + TEMPO APLICADO + VALOR DO RATEIO DO CUSTO FIXO + VALOR DO CUSTO DE DEPRECIAÇÃO + VALOR DO CUSTO FIXO SOBRE O PRODUTO + TOTAL DO CUSTO FIXO SOBRE O PRODUTO + CUSTO VARIÁVEL</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>                                
                                <Components:HlpPesquisa 
								Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="11" Height="20" Margin="0,0,0,3"
								Text="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.idTipoOperacao, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
                                WidthLabel="0"
								FieldPesquisa="ID" TableView="vwTipoOperacao" nameWindow="WinTipoOperacao">
                                    <Components:HlpPesquisa.Items>
                                        <System:String>xOperacao</System:String>
                                        <System:String>xClassificacaoFiscal</System:String>
                                    </Components:HlpPesquisa.Items>
                                </Components:HlpPesquisa>
                            </Grid>
                        </Expander>
                    </DockPanel>
                </AdornerDecorator>
            </TabItem>
            <TabItem Header="Compras">
                <DockPanel LastChildFill="True">
                    <Expander Header="Parâmetros de Compras" IsExpanded="True" Style="{StaticResource ExpanderPadrao}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"></ColumnDefinition>
                                <ColumnDefinition Width="275*" MaxWidth="300" MinWidth="300"></ColumnDefinition>
                                <ColumnDefinition Width="150*" MaxWidth="150" MinWidth="150"></ColumnDefinition>
                                <ColumnDefinition Width="60*" MaxWidth="60"></ColumnDefinition>
                                <ColumnDefinition Width="689*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"></RowDefinition>
                                <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                            </Grid.RowDefinitions>
                            
                            <!--Label-->
                            <Components:CustomTextBlock Grid.Column="1" Grid.Row="1" Text="Total máximo para liberação automática do pedido" />
                            <Components:CustomTextBlock Grid.Column="1" Grid.Row="2" Text="Requer aprovação da requisição?"/>
                            <Components:CustomTextBlock Grid.Column="1" Grid.Row="3" Text="Requer aprovação de cotação de compras?"/>
                            <Components:CustomTextBlock Grid.Column="1" Grid.Row="4" Text="Requer aprovação de pedido de compras?"/>
                            <Components:CustomTextBlock Grid.Column="1" Grid.Row="5" Text="Ignora saldo do estoque na requisição?"/>
                            
                            <!--Components-->
                            
                            <Components:CustomTextBox
                                Grid.Column="2" Grid.Row="1"
                                Text="{Binding currentModel.empresaParametros.ObjParametro_ComprasModel.vAprovacaoAutomaticaPedidoCompras, 
                                Mode=TwoWay, NotifyOnValidationError=True, 
                                UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, StringFormat={}{0:C}}"
								IsEnabled="{Binding bIsEnabled}"
								ToolTip="Informar o total máximo para aquele determinado pedido de compras para ser liberado automaticamente pelo sistema, sem aprovação de um supervisor.">
                            </Components:CustomTextBox>                            
                            <Components:CustomCheckBox 
                                Grid.Column="2" Grid.Row="2"
                                IsChecked="{Binding currentModel.empresaParametros.ObjParametro_ComprasModel.stAprovacaoRequisicao, Mode=TwoWay, 
                                NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"                                
								ToolTip="Informar se será obrigatória a aprovação da Requisição seja ela de consumo ou de compras. Quando 'SIM' o sistema só irá liberar a Requisição para cotação de compras quando aprovado por algum supervisor.">
                            </Components:CustomCheckBox>                            
                            <Components:CustomCheckBox
                                Grid.Column="2" Grid.Row="3"
                                IsChecked="{Binding currentModel.empresaParametros.ObjParametro_ComprasModel.stAprovacaoCotacaoCompras, 
                                Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"                                
								ToolTip="Informar se será obrigatória a aprovação da cotação de compras. Quando 'SIM' o sistema só irá liberar a cotação para montagem do pedido quando aprovado por algum supervisor">
                            </Components:CustomCheckBox>                            
                            <Components:CustomComboBox 
                                Grid.Column="2" Grid.Row="4"
                                SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_ComprasModel.stAprovacaoPedidoCompras, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
								ToolTip="Quando o campo St_aprova_pedido é igual a 0-NÃO o campo Vl_aprova_auto_pedido deve ser igual a zero;">
                                <Components:CustomComboBox.Items>
                                    <System:String>0-NÃO</System:String>
                                    <System:String>1-TOTAL</System:String>
                                    <System:String>2-PARCIAL</System:String>
                                    <System:String>3-USUARIO</System:String>
                                </Components:CustomComboBox.Items>
                            </Components:CustomComboBox>                            
                            <Components:CustomCheckBox 
                                Grid.Column="2" Grid.Row="5"
                                IsChecked="{Binding currentModel.empresaParametros.ObjParametro_ComprasModel.stIgnoraSaldoRequisicao, 
                                Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
								ToolTip="Informar se o sistema irá ignorar o saldo de estoque quando gerado uma requisição de consumo ou compra.">
                            </Components:CustomCheckBox>
                        </Grid>
                    </Expander>
                </DockPanel>
            </TabItem>
            <TabItem Header="Ordem de Produção">
                <AdornerDecorator>
                    <DockPanel LastChildFill="True">
                        <Expander Header="Parâmetros de Ordem de Produção" IsExpanded="True" Style="{StaticResource ExpanderPadrao}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"></ColumnDefinition>
                                    <ColumnDefinition Width="380*" MaxWidth="380" MinWidth="380"></ColumnDefinition>
                                    <ColumnDefinition Width="127*" MinWidth="120" MaxWidth="150"></ColumnDefinition>
                                    <ColumnDefinition Width="216*" MaxWidth="300"></ColumnDefinition>
                                    <ColumnDefinition Width="451*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>
                                    <RowDefinition Height="Auto" MaxHeight="23"></RowDefinition>                                    
                                </Grid.RowDefinitions>
                                
                                <!--Label-->
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="1" Text="Produção gera?"/>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="2" Text="Gera ordem de produção filhas?"/>
