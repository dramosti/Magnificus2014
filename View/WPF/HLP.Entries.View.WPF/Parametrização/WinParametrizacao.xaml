                                    <Components:CustomComboBox.Items>
                                        <System:String>0-NENHUM(sem preço)</System:String>
                                        <System:String>1-SUGERIDO(o calculado pelo sistema)</System:String>
                                        <System:String>2-MERCADO(é o valor de mercado informado na composição de preços)</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="11" Text="Atualiza valor de custo" VerticalAlignment="Center" Height="14" Margin="0,7"/>
                                <Components:CustomCheckBox 
                                    Grid.Column="2" Grid.Row="11"
                                    IsChecked="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.stAtualizaValorCusto, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
                                    VerticalAlignment="Center" Height="14" Margin="0,7">
                                </Components:CustomCheckBox>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="13" Text="Atualiza valor de Venda pós Recebimento?" VerticalAlignment="Center" Height="14" Margin="0,7"/>
                                <Components:CustomCheckBox
                                    Grid.Column="2" Grid.Row="13"
                                    IsChecked="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.stAtualizaValorVenda, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
                                    VerticalAlignment="Center"
								    ToolTip="Informar se o valor de venda será atualizado automaticamente pelo sistema após o recebimento, seja produto acabado ou material de venda" Height="14" Margin="0,7">
                                </Components:CustomCheckBox>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="15" Text="Tipo de Custo Default?" VerticalAlignment="Center" Height="14" Margin="0,7"/>
                                <Components:CustomComboBox
                                    Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="15"
