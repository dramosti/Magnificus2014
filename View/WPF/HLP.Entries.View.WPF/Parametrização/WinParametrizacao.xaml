                                VerticalAlignment="Center"
								ToolTip="Informar se será obrigatória a aprovação da Requisição seja ela de consumo ou de compras. Quando 'SIM' o sistema só irá liberar a Requisição para cotação de compras quando aprovado por algum supervisor." Height="14" Margin="0,7">
                            </Components:CustomCheckBox>
                            <Components:CustomTextBlock Grid.Column="1" Grid.Row="5" Text="Requer aprovação de cotação de compras?" VerticalAlignment="Center" Height="20" Margin="0,4"/>
                            <Components:CustomCheckBox
                                Grid.Column="2" Grid.Row="5"
                                IsChecked="{Binding currentModel.empresaParametros.ObjParametro_ComprasModel.stAprovacaoCotacaoCompras, 
                                Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
								IsEnabled="{Binding bIsEnabled}"
                                VerticalAlignment="Center"
								ToolTip="Informar se será obrigatória a aprovação da cotação de compras. Quando 'SIM' o sistema só irá liberar a cotação para montagem do pedido quando aprovado por algum supervisor" Height="14" Margin="0,7">
