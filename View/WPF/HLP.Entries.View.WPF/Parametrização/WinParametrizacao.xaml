                                    Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="5"
                                    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.stCustoComposicao, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="QUAL CUSTO DO MATERIAL NA COMPOSIÇÃO DO PRODUTO FINAL (1-COMPRA 2-VENDA)">
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-Compra</System:String>
                                        <System:String>1-Venda</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="7" Text="Custo baseado em?" VerticalAlignment="Center" Height="14" Margin="0,7"/>
                                <Components:CustomComboBox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="7"
                                    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.st_Markup, Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="QUAL CUSTO DO MATERIAL NA COMPOSIÇÃO DO PRODUTO FINAL (1-COMPRA 2-VENDA)">
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-Preço de Compra</System:String>
                                        <System:String>1- Preço de Venda</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="9" Text="Tipo de Valor de Venda" VerticalAlignment="Center" Height="14" Margin="0,7"/>
                                <Components:CustomComboBox
                                    Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="9"
                                    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_CustosModel.stValorVenda, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
