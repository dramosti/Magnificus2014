                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="1" Text="Tipo do estoque mínimo" VerticalAlignment="Center" Height="14" Margin="0,7"/>
                                <Components:CustomComboBox 
                                    Grid.Column="2" Grid.Row="1" SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_EstoqueModel.stEstoqueMinimo, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="Informar se o tipo de estoque mínimo será Automático ou Manual">
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-Automático</System:String>
                                        <System:String>1-Manual</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="3" Text="Tipo do estoque máximo" VerticalAlignment="Center"/>
                                <Components:CustomComboBox
                                    Grid.Column="2" Grid.Row="3"
                                    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_EstoqueModel.stEstoqueMaximo,
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="Informar se o tipo de estoque máximo será Automático ou Manual.">
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-Automático</System:String>
                                        <System:String>1-Manual</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="5" Text="Tipo de média consumo" VerticalAlignment="Center"/>
                                <Components:CustomComboBox
                                    Grid.Column="2" Grid.Row="5"
                                    SelectedIndex="{Binding currentModel.empresaParametros.ObjParametro_EstoqueModel.stMediaConsumo, 
                                    Mode=TwoWay, NotifyOnValidationError=True, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"
								    IsEnabled="{Binding bIsEnabled}"
								    ToolTip="Informar ao sistema em quanto tempo será a feita de média de consumo">
                                    <Components:CustomComboBox.Items>
                                        <System:String>0-Semanal</System:String>
                                        <System:String>1-Mensal</System:String>
                                    </Components:CustomComboBox.Items>
                                </Components:CustomComboBox>
                                <Components:CustomTextBlock Grid.Column="1" Grid.Row="7" Text="Vendas Gera?" VerticalAlignment="Center"/>
