<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Components="clr-namespace:HLP.Components.View.WPF"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
    x:Class="HLP.Components.View.WPF.WindowComponents.wdQuickSearch"
        Title="wdQuickSearch" Height="200" Width="300" x:Name="wdQs">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Components:CustomTextBlock HorizontalAlignment="Left" Grid.Row="1"  TextWrapping="Wrap" 
                                    Text="Valor" VerticalAlignment="Top"/>
        <Components:CustomTextBlock HorizontalAlignment="Left" Grid.Row="2"  TextWrapping="Wrap" 
                                    Text="Tipo Filtro" VerticalAlignment="Top"/>
        <Components:CustomTextBox Text="{Binding xValue}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" IsEnabled="True"></Components:CustomTextBox>        
        <CheckBox Grid.Row="3" Grid.Column="0" Command="{Binding ChangeToEqualCommand}"></CheckBox>
        <CheckBox Grid.Row="3" Grid.Column="1" Command="{Binding ChangeToStartWithCommand}"></CheckBox>
        <CheckBox Grid.Row="3" Grid.Column="2" Command="{Binding ChangeToContainsCommand}"></CheckBox>
        <Button Command="{Binding searchCommad}" CommandParameter="{Binding ElementName=wdQs}" Content="Search" Grid.Row="6" Grid.Column="2"></Button>
    </Grid>
</Window>
